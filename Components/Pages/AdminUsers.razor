    private async Task<(bool allowed, string error)> CheckUserBalance(string userId, decimal newBetAmount)
    {
        using var context = DbFactory.CreateDbContext();
        var targetUser = await context.Users.AsNoTracking().FirstOrDefaultAsync(u => u.Id == userId);
        var creditLimit = targetUser?.CreditLimit ?? 0m;
        var userTrans = await context.Transactions.Where(t => t.UserId == userId).AsNoTracking().ToListAsync();
        var userBets = await context.Bets.Where(b => b.UserId == userId).AsNoTracking().ToListAsync();
        // --- Exclude Rejected AND Cancelled transactions ---
        var totalDeposits = userTrans.Where(t => t.Type == "Deposit" && t.Status != "Rejected" && t.Status != "Cancelled").Sum(t => t.AmountNOK);
        var totalWithdrawals = userTrans.Where(t => t.Type == "Withdrawal" && t.Status != "Rejected" && t.Status != "Cancelled").Sum(t => t.AmountNOK);
        
        int?
        excludeBetId = reviewingBetModel?.Id;
        // FIX: Re-write logic to balance = D - W - (All Valid Stakes) + (Won Payouts)
        var totalValidStakes = userBets
            .Where(b => (excludeBetId == null || b.Id != excludeBetId) && 
                        b.Status != "Rejected" && 
                        b.Status != "Cancelled" && 
                        b.Status != "Void")
            .Sum(b => (decimal)(b.AmountNOK ?? 0));
        // 2. Won Payouts (Only for Won bets)
        var totalWonPayouts = userBets
            .Where(b => (excludeBetId == null || b.Id != excludeBetId) && b.Status == "Won")
            .Sum(b => b.PotentialPayout);
        var currentBal = totalDeposits - totalWithdrawals - totalValidStakes + totalWonPayouts;

        var availableCredit = currentBal + creditLimit - newBetAmount;
        if (availableCredit < 0) return (false, $"Insufficient funds. Available: {(currentBal + creditLimit):N0} kr. Required: {newBetAmount:N0} kr.");
        return (true, string.Empty);
    }

    private async Task ProcessBet(Bet bet, string newStatus)
    {
        reviewErrorMessage = null;
        modalSuccessMessage = null; 
        string originalStatus = bet.Status;

        if (newStatus != "Rejected" && newStatus != "Cancelled")
        {
            if (bet.AmountNOK == null || bet.AmountNOK <= 0) { reviewErrorMessage = "Invalid amount";
                return; }
            if (bet.Odds <= 1) { reviewErrorMessage = "Invalid odds";
                return; }
            if (Math.Round(bet.Odds, 2) != bet.Odds) { reviewErrorMessage = "Odds max 2 decimals";
                return; }
        }

        if (new[] { "Won", "Lost", "Void", "Completed", "Cancelled" }.Contains(originalStatus))
        {
             bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Update Bet #{bet.Id}?\n\n{originalStatus} -> {newStatus}");
             if (!confirmed) return;
        }

        if (newStatus == "Approved")
        {
            var (allowed, error) = await CheckUserBalance(bet.UserId, (decimal)bet.AmountNOK!);
            if (!allowed) { reviewErrorMessage = error; return; }
        }
        
        using var context = DbFactory.CreateDbContext();
        var dbBet = await context.Bets.FindAsync(bet.Id);
        var dbUser = await context.Users.FindAsync(bet.UserId);
        if (dbBet != null && dbUser != null)
        {
            // ---------------------------------------------------------
            // 1. REVERSE IMPACT OF OLD STATUS (Before updating values)
            // ---------------------------------------------------------
            if (dbBet.Status == "Won")
            {
                   // Remove winnings
                dbUser.Balance -= dbBet.PotentialPayout;
            }
            else if (dbBet.Status == "Void" || dbBet.Status == "Rejected" || dbBet.Status == "Cancelled")
            {
                // Remove refunded stake
                dbUser.Balance -= (decimal)(dbBet.AmountNOK ?? 0);
            }
            // Pending/Lost/Approved: Stake was already deducted and stayed deducted.
            // No reversal needed.

            // ---------------------------------------------------------
            // 2. UPDATE BET VALUES
            // ---------------------------------------------------------
            dbBet.Status = newStatus;
            dbBet.AmountNOK = bet.AmountNOK;
            dbBet.Odds = bet.Odds; 
            dbBet.UpdatedAt = DateTime.UtcNow;

            // ---------------------------------------------------------
            // 3. APPLY IMPACT OF NEW STATUS (After updating values)
            // ---------------------------------------------------------
            if (newStatus == "Won")
            {
                // Add winnings
                   dbUser.Balance += dbBet.PotentialPayout;
            }
            else if (newStatus == "Void" || newStatus == "Rejected" || newStatus == "Cancelled")
            {
                // Refund stake
                dbUser.Balance += (decimal)(dbBet.AmountNOK ?? 0);
            }
            // Pending/Lost/Approved: Stake remains deducted.
            context.AuditLogs.Add(new AuditLog
            {
                AdminUserName = currentAdminName ?? "Unknown",
                Action = $"Bet {newStatus}",
                TargetUserName = bet.UserName,
                Details = $"Bet ID: {bet.Id}, Status: {newStatus}"
            });
            await context.SaveChangesAsync();
        }

        // Notify
        if (dbUser != null && !string.IsNullOrEmpty(dbUser.DiscordUserId))
        {
            _ = DiscordService.NotifyUserBetAsync(dbUser.DiscordUserId, dbBet!, newStatus, isUpdate: false);
        }
        await HubContext.Clients.Group(bet.UserId).SendAsync("ReceiveUpdate", $"Your bet status is now: {newStatus}");
        await HubContext.Clients.Group("Admins").SendAsync("ReceiveAdminNotification", "Update");
        modalSuccessMessage = $"Bet #{bet.Id} updated.";
        
        // Auto-refresh main data and selected user bets
        await RefreshData();
    }


