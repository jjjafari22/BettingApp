@page "/admin/users"
@using BettingApp.Data
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.SignalR
@using Microsoft.AspNetCore.SignalR.Client
@using BettingApp.Hubs
@attribute [Authorize]
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav
@inject IJSRuntime JSRuntime
@inject IHubContext<BetHub> HubContext
@implements IAsyncDisposable
@rendermode InteractiveServer

@* --- PERSISTENT NOTIFICATION AREA --- *@
@if (successMessage != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> @successMessage
        <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
    </div>
}

@if (!hasAccess)
{
    <div class="alert alert-danger">You are not authorized to view this page.</div>
}
else if (isLoading)
{
    <p><em>Loading users and calculating balances...</em></p>
}
else
{
    @* --- PENDING APPROVALS SECTION --- *@
    <div class="card border-warning mb-4">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0"><i class="bi bi-exclamation-circle-fill me-2"></i>Pending Approvals</h4>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-sm table-striped table-hover mb-0 align-middle text-nowrap">
                    <thead class="table-dark">
                        <tr>
                            <th>Date Joined</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>User</th>
                            <th>Referred By</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in pendingUsersVM)
                        {
                            <tr>
                                <td>@(user.DateJoined == DateTime.MaxValue ? "-" : ToUserLocal(user.DateJoined).ToString("g"))</td>
                                <td>@user.FirstName</td>
                                <td>@user.LastName</td>
                                <td>@user.UserName</td>
                                <td>@(string.IsNullOrEmpty(user.ReferredBy) ? "-" : user.ReferredBy)</td>
                                <td>
                                    <button class="btn btn-success btn-sm me-2" @onclick="() => ApproveUser(user.Id)">
                                        <i class="bi bi-check-lg"></i> Approve
                                     </button>
                                     <button class="btn btn-danger btn-sm" @onclick="() => RejectUser(user.Id)">
                                         <i class="bi bi-x-lg"></i> Reject
                                    </button>
                                </td>
                            </tr>
                        }
                        @if (!pendingUsersVM.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-3">No pending approvals.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @* --- ALL USERS SECTION --- *@
    <h3>Active Users</h3>
    <div class="row mb-3">
        <div class="col-md-6">
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-search"></i></span>
                <input type="text" class="form-control" placeholder="Search by name or email..." 
                       @bind="searchTerm" @bind:event="oninput" />
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-sm table-striped table-hover align-middle text-nowrap">
            <thead class="table-dark">
                 <tr>
                    <th style="cursor: pointer;" @onclick='() => Sort("LastActive")'>
                        Last Active @GetSortIcon("LastActive")
                    </th>
                    <th style="cursor: pointer;" @onclick='() => Sort("FirstName")'>
                        First Name @GetSortIcon("FirstName")
                    </th>
                    <th style="cursor: pointer;" @onclick='() => Sort("LastName")'>
                        Last Name @GetSortIcon("LastName")
                    </th>
                    <th style="cursor: pointer;" @onclick='() => Sort("UserName")'>
                        User @GetSortIcon("UserName")
                    </th>
                    <th style="cursor: pointer;" @onclick='() => Sort("Balance")'>
                        Balance @GetSortIcon("Balance")
                    </th>
                    <th style="cursor: pointer;" @onclick='() => Sort("AvailableCredit")'>
                        Avail. Credit @GetSortIcon("AvailableCredit")
                    </th>
                    <th style="cursor: pointer;" @onclick='() => Sort("Handle")'>
                        Handle @GetSortIcon("Handle")
                    </th>
                    <th style="cursor: pointer;" @onclick='() => Sort("LifetimeProfit")'>
                        Lifetime Profit @GetSortIcon("LifetimeProfit")
                    </th>
                    <th class="text-center">Discord</th>
                    
                    @* --- NEW COLUMNS --- *@
                    <th>Referred By</th>
                    <th style="cursor: pointer;" @onclick='() => Sort("IsManuallyVerified")'>
                        Verified @GetSortIcon("IsManuallyVerified")
                    </th>

                    <th style="cursor: pointer;" @onclick='() => Sort("IsAdmin")'>
                        Admin @GetSortIcon("IsAdmin")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in FilteredAndSortedUsers)
                {
                    <tr>
                        <td>@ToUserLocal(user.LastActive).ToString("g")</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.UserName</td>
                        <td class="@(user.Balance >= 0 ? "text-success" : "text-danger") fw-bold">
                            @user.Balance.ToString("N0") kr
                        </td>
                        <td>@user.AvailableCredit.ToString("N0") kr</td>
                        <td class="fw-bold">
                            @user.Handle.ToString("N0") kr
                        </td>
                        <td class="@(user.LifetimeProfit >= 0 ? "text-success" : "text-danger") fw-bold">
                            @user.LifetimeProfit.ToString("N0") kr
                        </td>
                        <td class="text-center">
                            @if (!string.IsNullOrEmpty(user.DiscordUserId))
                            {
                                <i class="bi bi-discord text-primary" title="Connected"></i>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        
                        @* --- NEW: Referred By --- *@
                        <td>
                             @(string.IsNullOrEmpty(user.ReferredBy) ? "-" : user.ReferredBy)
                        </td>

                        @* --- NEW: Manually Verified Toggle --- *@
                        <td>
                            <button class="btn btn-sm @(user.IsManuallyVerified ? "btn-success" : "btn-outline-secondary")" 
                                    @onclick="() => ToggleVerification(user.Id)"
                                    title="Click to toggle verification status">
                                <i class="bi @(user.IsManuallyVerified ? "bi-check-circle-fill" : "bi-circle")"></i>
                                @(user.IsManuallyVerified ? "Verified" : "Unverified")
                            </button>
                        </td>

                        <td>
                            @if (user.IsAdmin)
                            {
                                <span class="badge bg-primary">Admin</span>
                            }
                            else
                            {
                                 <span class="badge bg-secondary">User</span>
                            }
                        </td>
                    </tr>
                }
                @if (!FilteredAndSortedUsers.Any())
                {
                    <tr>
                        <td colspan="12" class="text-center text-muted">No active users found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code 
{
    private List<UserViewModel> allUsersVM = new();
    private List<UserViewModel> pendingUsersVM = new();
    private string searchTerm = "";
    private bool hasAccess = false;
    private bool isLoading = true;
    private string? successMessage;
    // SignalR Connection
    private HubConnection? hubConnection;
    // Sorting state - DEFAULT TO LAST ACTIVE
    private string sortColumn = "LastActive";
    private bool sortAscending = false; // Descending by default for dates

    // Timezone Logic
    private int TimezoneOffset { get; set; }
    private DateTime ToUserLocal(DateTime utcDate)
    {
        if (utcDate == DateTime.MinValue || utcDate == DateTime.MaxValue) return utcDate;
        return utcDate.AddMinutes(-TimezoneOffset);
    }

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        using var context = DbFactory.CreateDbContext();
        
        if (user.Identity?.IsAuthenticated == true)
        {
            var currentUser = await context.Users.AsNoTracking()
                .FirstOrDefaultAsync(u => u.UserName == user.Identity.Name);
            hasAccess = currentUser?.IsAdmin ?? false;
        }

        if (!hasAccess) return;

        // --- SignalR Setup ---
        hubConnection = new HubConnectionBuilder()
            .WithUrl(Nav.ToAbsoluteUri("/bethub"))
            .Build();
        
        hubConnection.On("ReceiveUserRegistration", async () =>
        {
            await RefreshData();
        });
        
        // Also listen for general updates (bets/transactions) to refresh sorting
        hubConnection.On<string>("ReceiveAdminNotification", async (msg) => { await RefreshData(); });

        await hubConnection.StartAsync();
        await hubConnection.SendAsync("JoinAdminGroup");
        // ---------------------

        await LoadData(context);
        isLoading = false;
    }
    
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && hasAccess)
        {
            try {
                TimezoneOffset = await JSRuntime.InvokeAsync<int>("getBrowserTimeZoneOffset");
                StateHasChanged();
            } catch { }
        }
    }

    // Helper to refresh data when event is received
    private async Task RefreshData()
    {
        using var context = DbFactory.CreateDbContext();
        await LoadData(context);
        await InvokeAsync(StateHasChanged);
    }

    private async Task LoadData(ApplicationDbContext context)
    {
        var users = await context.Users.AsNoTracking().ToListAsync();
        var bets = await context.Bets.AsNoTracking().ToListAsync();
        var transactions = await context.Transactions.AsNoTracking().ToListAsync();

        allUsersVM = new List<UserViewModel>();
        pendingUsersVM = new List<UserViewModel>();

        foreach (var u in users)
        {
            var userBets = bets.Where(b => b.UserId == u.Id).ToList();
            var userTrans = transactions.Where(t => t.UserId == u.Id).ToList();

            // --- Exclude Rejected transactions ---
            var totalDeposits = userTrans.Where(t => t.Type == "Deposit" && t.Status != "Rejected").Sum(t => t.AmountNOK);
            var totalWithdrawals = userTrans.Where(t => t.Type == "Withdrawal" && t.Status != "Rejected").Sum(t => t.AmountNOK);
            var winnings = userBets.Where(b => b.Status == "Won").Sum(b => b.PotentialPayout);
            var settledStakes = userBets
                .Where(b => b.Status == "Won" || b.Status == "Lost")
                .Sum(b => (decimal)(b.AmountNOK ?? 0));
            var lifetimeProfit = winnings - settledStakes;

            // Liability -> Pending or Approved
            var liability = userBets.Where(b => 
                b.Status == "Pending" || b.Status == "Approved"
            ).Sum(b => (decimal)(b.AmountNOK ?? 0));

            var balance = totalDeposits - totalWithdrawals - liability + winnings;
            
            // --- CALCULATE HANDLE (Total Amount Betted) ---
            var handle = userBets
                .Where(b => b.Status != "Rejected" && b.Status != "Cancelled")
                .Sum(b => (decimal)(b.AmountNOK ?? 0));

            DateTime dateJoined = u.CreatedAt;
            if (dateJoined == DateTime.MinValue)
            {
                 // Fallback calculation for legacy users
                var firstBet = userBets.OrderBy(b => b.CreatedAt).FirstOrDefault()?.CreatedAt;
                var firstTrans = userTrans.OrderBy(t => t.Date).FirstOrDefault()?.Date;
                
                if (firstBet.HasValue && firstTrans.HasValue)
                    dateJoined = firstBet.Value < firstTrans.Value ? firstBet.Value : firstTrans.Value;
                else if (firstBet.HasValue)
                    dateJoined = firstBet.Value;
                else if (firstTrans.HasValue)
                    dateJoined = firstTrans.Value;
                else
                    dateJoined = DateTime.MaxValue;
            }

            // --- CALCULATE LAST ACTIVE DATE ---
            var lastBetDate = userBets.Any() ? userBets.Max(b => b.UpdatedAt) : DateTime.MinValue;
            var lastTransDate = userTrans.Any() ? userTrans.Max(t => t.UpdatedAt) : DateTime.MinValue;
            var userUpdateDate = u.UpdatedAt == DateTime.MinValue ? u.CreatedAt : u.UpdatedAt;
            
            var lastActive = new[] { userUpdateDate, lastBetDate, lastTransDate }.Max();

            var vm = new UserViewModel
            {
                Id = u.Id,
                UserName = u.UserName ?? "Unknown",
                Email = u.Email ?? "",
                FirstName = u.FirstName ?? "",
                LastName = u.LastName ?? "",
                Handle = handle,
                IsAdmin = u.IsAdmin,
                CreditLimit = u.CreditLimit,
                Balance = balance,
                AvailableCredit = balance + u.CreditLimit,
                LifetimeProfit = lifetimeProfit,
                DateJoined = dateJoined,
                LastActive = lastActive,
                DiscordUserId = u.DiscordUserId,
                ReferredBy = u.ReferredBy,             // <--- Map Referral
                IsManuallyVerified = u.IsManuallyVerified // <--- Map Verification
            };

            if (u.EmailConfirmed)
            {
                allUsersVM.Add(vm);
            }
            else
            {
                pendingUsersVM.Add(vm);
            }
        }
        
        // Sort Pending Users by Date Joined (Most Recent First)
        pendingUsersVM = pendingUsersVM.OrderByDescending(u => u.DateJoined).ToList();
    }

    private async Task ApproveUser(string userId)
    {
        using var context = DbFactory.CreateDbContext();
        var user = await context.Users.FindAsync(userId);
        
        if (user != null)
        {
            user.EmailConfirmed = true;
            user.UpdatedAt = DateTime.UtcNow;

            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var adminName = authState.User.Identity?.Name ?? "System";
            context.AuditLogs.Add(new AuditLog 
            {
                Action = "Approve Registration",
                AdminUserName = adminName,
                TargetUserName = user.UserName ?? "Unknown",
                Details = "User approved by admin.",
                Timestamp = DateTime.UtcNow
            });

            await context.SaveChangesAsync();
            
            await HubContext.Clients.Group("Admins").SendAsync("ReceiveAdminNotification", "Update");
            await LoadData(context); 
            
            successMessage = $"User {user.UserName} has been approved.";
            StateHasChanged();
        }
    }

    private async Task RejectUser(string userId)
    {
        using var context = DbFactory.CreateDbContext();
        var user = await context.Users.FindAsync(userId);
        
        if (user != null)
        {
            var name = user.UserName;
            context.Users.Remove(user);
            
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var adminName = authState.User.Identity?.Name ?? "System";
            context.AuditLogs.Add(new AuditLog 
            {
                Action = "Reject Registration",
                AdminUserName = adminName,
                TargetUserName = name ?? "Unknown",
                Details = "User rejected and deleted by admin.",
                Timestamp = DateTime.UtcNow
            });

            await context.SaveChangesAsync();
            
            await HubContext.Clients.Group("Admins").SendAsync("ReceiveAdminNotification", "Update");
            await LoadData(context); 
            
            successMessage = $"User {name} has been rejected and deleted.";
            StateHasChanged();
        }
    }

    // --- NEW: Toggle Verification Logic ---
    private async Task ToggleVerification(string userId)
    {
        using var context = DbFactory.CreateDbContext();
        var user = await context.Users.FindAsync(userId);
        
        if (user != null)
        {
            user.IsManuallyVerified = !user.IsManuallyVerified;
            user.UpdatedAt = DateTime.UtcNow;

            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var adminName = authState.User.Identity?.Name ?? "System";
            
            context.AuditLogs.Add(new AuditLog 
            {
                Action = "Toggle Verification",
                AdminUserName = adminName,
                TargetUserName = user.UserName ?? "Unknown",
                Details = $"Manual verification set to {user.IsManuallyVerified}",
                Timestamp = DateTime.UtcNow
            });

            await context.SaveChangesAsync();
            await LoadData(context); // Refresh data
            
            successMessage = $"User {user.UserName} is now {(user.IsManuallyVerified ? "Verified" : "Unverified")}.";
            StateHasChanged();
        }
    }

    private void Sort(string column)
    {
        if (sortColumn == column)
        {
            sortAscending = !sortAscending;
        }
        else
        {
            sortColumn = column;
            sortAscending = column switch 
            {
                "LastActive" or "DateJoined" or "Balance" or "Handle" or "LifetimeProfit" or "AvailableCredit" => false,
                "IsManuallyVerified" => false, // New default descending
                _ => true
            };
        }
    }

    private string GetSortIcon(string column)
    {
        if (sortColumn != column) return "";
        return sortAscending ? "▲" : "▼";
    }

    public async ValueTask DisposeAsync()
    {
        if (hubConnection is not null)
        {
            await hubConnection.DisposeAsync();
        }
    }

    private IEnumerable<UserViewModel> FilteredAndSortedUsers
    {
        get
        {
            var query = allUsersVM.AsEnumerable();

            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                query = query.Where(u => 
                    u.UserName.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) || 
                    u.Email.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                    u.FirstName.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                    u.LastName.Contains(searchTerm, StringComparison.OrdinalIgnoreCase));
            }

            query = sortColumn switch
            {
                "LastActive" => sortAscending ? query.OrderBy(u => u.LastActive) : query.OrderByDescending(u => u.LastActive),
                "DateJoined" => sortAscending ? query.OrderBy(u => u.DateJoined) : query.OrderByDescending(u => u.DateJoined),
                "UserName" => sortAscending ? query.OrderBy(u => u.UserName) : query.OrderByDescending(u => u.UserName),
                "FirstName" => sortAscending ? query.OrderBy(u => u.FirstName) : query.OrderByDescending(u => u.FirstName),
                "LastName" => sortAscending ? query.OrderBy(u => u.LastName) : query.OrderByDescending(u => u.LastName),
                "Balance" => sortAscending ? query.OrderBy(u => u.Balance) : query.OrderByDescending(u => u.Balance),
                "Handle" => sortAscending ? query.OrderBy(u => u.Handle) : query.OrderByDescending(u => u.Handle),
                "LifetimeProfit" => sortAscending ? query.OrderBy(u => u.LifetimeProfit) : query.OrderByDescending(u => u.LifetimeProfit),
                "AvailableCredit" => sortAscending ? query.OrderBy(u => u.AvailableCredit) : query.OrderByDescending(u => u.AvailableCredit),
                "IsAdmin" => sortAscending ? query.OrderBy(u => u.IsAdmin) : query.OrderByDescending(u => u.IsAdmin),
                // --- NEW Sort ---
                "IsManuallyVerified" => sortAscending ? query.OrderBy(u => u.IsManuallyVerified) : query.OrderByDescending(u => u.IsManuallyVerified),
                _ => query
            };

            return query;
        }
    }

    public class UserViewModel
    {
        public string Id { get; set; } = "";
        public string UserName { get; set; } = "";
        public string Email { get; set; } = "";
        public string FirstName { get; set; } = "";
        public string LastName { get; set; } = "";
        public bool IsAdmin { get; set; }
        public decimal CreditLimit { get; set; }
        public decimal Balance { get; set; }
        public decimal Handle { get; set; }
        public decimal AvailableCredit { get; set; }
        public decimal LifetimeProfit { get; set; }
        public DateTime DateJoined { get; set; }
        public DateTime LastActive { get; set; }
        public string? DiscordUserId { get; set; }
        // --- NEW Properties ---
        public string? ReferredBy { get; set; }
        public bool IsManuallyVerified { get; set; }
    }
}