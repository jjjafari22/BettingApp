    private void ApplyFilters()
    {
        if (selectedUserId == null) return;
        DateTime cutoff = DateTime.MinValue;
        dateFilterText = "All Time";

        if (dateFilter == "7D") { cutoff = DateTime.UtcNow.AddDays(-7); dateFilterText = "Last 7 Days"; }
        else if (dateFilter == "30D") { cutoff = DateTime.UtcNow.AddDays(-30); dateFilterText = "Last 30 Days"; }
        else if (dateFilter == "6M") { cutoff = DateTime.UtcNow.AddMonths(-6); dateFilterText = "Last 6 Months"; }
        else if (dateFilter == "1Y") { cutoff = DateTime.UtcNow.AddYears(-1); dateFilterText = "Last Year"; }

        // 1. Filter by DATE (for stats calculation)
        var betsInDateRange = allSelectedUserBets.Where(b => b.UpdatedAt >= cutoff).ToList();
        // 2. Filter by STATUS (for table display only)
        if (statusFilter == "All")
        {
            displayedUserBets = betsInDateRange;
        }
        else
        {
            displayedUserBets = betsInDateRange.Where(b => b.Status == statusFilter).ToList();
        }

        // 3. Calculate Stats based on DATE RANGE only (Standard Performance Metrics)
        // Handle: Total amount bet (excluding Rejected/Cancelled)
        selectedUserHandle = betsInDateRange
            .Where(b => b.Status != "Rejected" && b.Status != "Cancelled")
            .Sum(b => (decimal)(b.AmountNOK ?? 0));
        // Profit: Winnings - Settled Stakes
        var periodWinnings = betsInDateRange
            .Where(b => b.Status == "Won")
            .Sum(b => b.PotentialPayout);
        var periodStakes = betsInDateRange
            .Where(b => b.Status == "Won" || b.Status == "Lost")
            .Sum(b => (decimal)(b.AmountNOK ?? 0));
        selectedUserProfit = periodWinnings - periodStakes;

        StateHasChanged();
    }

