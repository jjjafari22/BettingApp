@page "/admin/transactions"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.SignalR
@using Microsoft.AspNetCore.SignalR.Client
@using BettingApp.Hubs
@using BettingApp.Data
@using BettingApp.Services
@using Microsoft.EntityFrameworkCore
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject IHubContext<BetHub> HubContext
@inject IJSRuntime JSRuntime
@inject DiscordNotificationService DiscordService
@attribute [Authorize]
@rendermode InteractiveServer

<h3>Manage Transactions</h3>

@if (successMessage != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        <i class="bi bi-bell-fill me-2"></i> @successMessage
        <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
    </div>
}

@if (errorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @errorMessage
        <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
    </div>
}

<div class="card border-warning mb-4">
    <div class="card-header bg-warning text-dark">
        <strong>Pending Withdraw Requests</strong>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                     <tr>
                        <th>Date</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>User</th>
                        <th>Platform</th>
                        <th>Amount</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (pendingWithdrawals.Count == 0)
                    {
                        <tr><td colspan="7" class="text-center text-muted p-3">No pending withdrawals.</td></tr>
                    }
                    @foreach (var w in pendingWithdrawals)
                    {
                        var u = allUsers.FirstOrDefault(x => x.Id == w.UserId);
                        <tr>
                            <td>@ToUserLocal(w.Date).ToString("g")</td>
                            <td>@(u?.FirstName ?? "-")</td>
                            <td>@(u?.LastName ?? "-")</td>
                            <td>@w.UserName</td>
                            <td>@w.Platform</td>
                            <td><strong>@w.AmountNOK.ToString("N0") kr</strong></td>
                            <td>
                                <button class="btn btn-success btn-sm me-2" @onclick="() => ConfirmWithdraw(w)">
                                    Confirm Payout
                                </button>
                                <button class="btn btn-danger btn-sm" @onclick="() => RejectWithdraw(w)">
                                    Reject
                                </button>
                             </td>
                        </tr>
                    }
                </tbody>
            </table>
         </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 mb-4">
        <div class="card">
             <div class="card-header bg-primary text-white">Add Transaction (Manual)</div>
            <div class="card-body">
                <div class="row">
                     <div class="col-md-3 mb-3">
                        <label>Select User</label>
                        <select class="form-select" value="@newTrans.UserId" @onchange="OnUserSelectChanged">
                            <option value="">-- Select User --</option>
                            @foreach (var user in allUsers)
                            {
                                <option value="@user.Id">@user.UserName</option>
                            }
                        </select>
                          
                        @* --- Always Visible Stats Block --- *@
                        <div class="mt-2 p-2 bg-light border rounded small">
                            <div class="d-flex justify-content-between">
                                <span>Balance:</span>
                                <span class="@(selectedUserBalance >= 0 ? "text-success" : "text-danger") fw-bold">
                                    @(selectedUserBalance.HasValue ? $"{selectedUserBalance.Value:N0} kr" : "-")
                                </span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Avail. Credit:</span>
                                <span class="text-primary fw-bold">
                                    @(selectedUserAvail.HasValue ? $"{selectedUserAvail.Value:N0} kr" : "-")
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-2 mb-3">
                        <label>Type</label>
                        <select class="form-select" @bind="newTrans.Type">
                            <option value="Deposit">Deposit</option>
                            <option value="Withdrawal">Withdraw</option>
                        </select>
                     </div>

                    <div class="col-md-3 mb-3">
                        <label>Platform</label>
                        <input type="text" class="form-control" placeholder="e.g. Bank, Vipps" @bind="newTrans.Platform" />
                    </div>

                    <div class="col-md-2 mb-3">
                        <label>Amount (NOK)</label>
                        <input type="number" class="form-control" @bind="newTrans.AmountNOK" />
                    </div>

                    <div class="col-md-2 mb-3 d-flex align-items-end">
                        <button class="btn btn-primary w-100" @onclick="AddTransaction">Add</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<h4 class="mb-3">Transaction History</h4>
<div class="table-responsive">
    <table class="table table-sm table-striped table-hover align-middle text-nowrap">
        <thead class="table-dark">
            <tr>
                <th>Last Updated</th>
                <th>User</th>
                <th>Type</th>
                <th>Platform</th>
                <th>Amount</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in allTransactions)
            {
                <tr>
                    <td>@ToUserLocal(t.UpdatedAt).ToString("g")</td>
                    <td>@t.UserName</td>
                    <td>
                        <span class="badge @(t.Type == "Deposit" ? "bg-success" : "bg-warning")">
                            @(t.Type == "Withdrawal" ? "Withdraw" : t.Type)
                        </span>
                    </td>
                    <td>@t.Platform</td>
                    <td>@t.AmountNOK.ToString("N0") kr</td>
                    <td>
                        @if (t.Status == "Completed" || t.Status == "Won" || t.Status == "Approved")
                        {
                            <span class="badge bg-success">@t.Status</span>
                        }
                        else if (t.Status == "Pending")
                        {
                            <span class="badge bg-warning text-dark">@t.Status</span>
                        }
                        else if (t.Status == "Rejected" || t.Status == "Lost" || t.Status == "Cancelled")
                        {
                            <span class="badge bg-danger">@t.Status</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@t.Status</span>
                        }
                    </td>
                </tr>
            }
            @if (allTransactions.Count == 0)
            {
                <tr><td colspan="6" class="text-muted text-center">No transactions found.</td></tr>
             }
        </tbody>
    </table>
</div>

@code {
    private List<ApplicationUser> allUsers = new();
    private List<Transaction> allTransactions = new();
    private List<Transaction> pendingWithdrawals = new();
    private Transaction newTrans = new() { Type = "Deposit", Date = DateTime.UtcNow, Status = "Completed" };
    
    private string? successMessage;
    private string? errorMessage;
    private decimal? selectedUserBalance;
    private decimal? selectedUserAvail;
    private string? currentAdminName;
    private HubConnection? hubConnection;

    private int TimezoneOffset { get; set; }

    private DateTime ToUserLocal(DateTime utcDate)
    {
        if (utcDate == DateTime.MinValue || utcDate == DateTime.MaxValue) return utcDate;
        return utcDate.AddMinutes(-TimezoneOffset);
    }

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        currentAdminName = user.Identity?.Name;

        using var context = DbFactory.CreateDbContext();
        var userName = user.Identity?.Name;
        ApplicationUser? dbUser = null;
        if (!string.IsNullOrEmpty(userName))
        {
            dbUser = await context.Users.FirstOrDefaultAsync(u => u.UserName == userName);
        }

        if (dbUser == null || !dbUser.IsAdmin)
        {
            Nav.NavigateTo("/");
            return;
        }

        allUsers = await context.Users.ToListAsync();
        await LoadTransactions(context);
    }
    
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try {
                TimezoneOffset = await JSRuntime.InvokeAsync<int>("getBrowserTimeZoneOffset");
                await SetupSignalR();
                StateHasChanged();
            } catch { }
        }
    }

    private async Task OnUserSelectChanged(ChangeEventArgs e)
    {
        newTrans.UserId = e.Value?.ToString() ?? "";
        selectedUserBalance = null;
        selectedUserAvail = null;

        if (!string.IsNullOrEmpty(newTrans.UserId))
        {
            using var context = DbFactory.CreateDbContext();
            selectedUserBalance = await GetUserBalance(newTrans.UserId, context);
            var user = allUsers.FirstOrDefault(u => u.Id == newTrans.UserId);
            if (user != null)
            {
                selectedUserAvail = selectedUserBalance + user.CreditLimit;
            }
        }
    }

    private async Task SetupSignalR()
    {
        hubConnection = new HubConnectionBuilder().WithUrl(Nav.ToAbsoluteUri("/bethub")).Build();
        hubConnection.On<string>("ReceiveUpdate", async (message) =>
        {
            using var context = DbFactory.CreateDbContext();
            await LoadTransactions(context);
            await InvokeAsync(StateHasChanged);
        });
        hubConnection.On<string>("ReceiveAdminNotification", async (message) =>
        {
            using var context = DbFactory.CreateDbContext();
            await LoadTransactions(context);
            await InvokeAsync(StateHasChanged);
        });
        await hubConnection.StartAsync();
        await hubConnection.InvokeAsync("JoinAdminGroup");
    }

    private async Task LoadTransactions(ApplicationDbContext context)
    {
        allTransactions = await context.Transactions.OrderByDescending(t => t.UpdatedAt).AsNoTracking().ToListAsync();
        pendingWithdrawals = await context.Transactions.Where(t => t.Type == "Withdrawal" && t.Status == "Pending").OrderBy(t => t.Date).AsNoTracking().ToListAsync();
    }

    private async Task ConfirmWithdraw(Transaction t)
    {
        successMessage = null;
        errorMessage = null;
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", 
            $"Are you sure that you have actually completed the actual withdraw and sent {t.AmountNOK} kr to {t.UserName}?");
        if (!confirmed) return;

        using var context = DbFactory.CreateDbContext();
        var userBalance = await GetUserBalance(t.UserId, context);
        if (userBalance < 0)
        {
            errorMessage = "WARNING: User balance is negative! This withdrawal may exceed available funds.";
            return;
        }

        var dbTrans = await context.Transactions.FindAsync(t.Id);
        if (dbTrans != null)
        {
            dbTrans.Status = "Completed";
            dbTrans.UpdatedAt = DateTime.UtcNow;
            context.AuditLogs.Add(new AuditLog { AdminUserName = currentAdminName ?? "Unknown", Action = "Confirmed Withdrawal", TargetUserName = t.UserName, Details = $"Amount: {t.AmountNOK}, Platform: {t.Platform}" });
            await context.SaveChangesAsync();
            await HubContext.Clients.Group(t.UserId).SendAsync("ReceiveUpdate", "Withdrawal confirmed");
            
            var targetUser = await context.Users.FindAsync(t.UserId);
            if (targetUser != null && !string.IsNullOrEmpty(targetUser.DiscordUserId))
            {
                await DiscordService.NotifyUserWithdrawalAsync(targetUser.DiscordUserId, t, "Completed");
            }

            successMessage = "Withdrawal confirmed.";
            await LoadTransactions(context);
        }
    }

    private async Task RejectWithdraw(Transaction t)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Reject this withdrawal request?");
        if (!confirmed) return;

        using var context = DbFactory.CreateDbContext();
        var dbTrans = await context.Transactions.FindAsync(t.Id);
        if (dbTrans != null)
        {
            dbTrans.Status = "Rejected";
            dbTrans.UpdatedAt = DateTime.UtcNow;
            context.AuditLogs.Add(new AuditLog { AdminUserName = currentAdminName ?? "Unknown", Action = "Rejected Withdrawal", TargetUserName = t.UserName, Details = $"Amount: {t.AmountNOK}, ID: {t.Id}" });
            await context.SaveChangesAsync();
            await HubContext.Clients.Group(t.UserId).SendAsync("ReceiveUpdate", "Withdrawal rejected");
            var targetUser = await context.Users.FindAsync(t.UserId);
            if (targetUser != null && !string.IsNullOrEmpty(targetUser.DiscordUserId))
            {
                await DiscordService.NotifyUserWithdrawalAsync(targetUser.DiscordUserId, t, "Rejected");
            }
            successMessage = "Withdrawal rejected.";
            await LoadTransactions(context);
        }
    }

    private async Task AddTransaction()
    {
        successMessage = null;
        errorMessage = null;
        if (string.IsNullOrEmpty(newTrans.UserId) || newTrans.AmountNOK <= 0 || string.IsNullOrEmpty(newTrans.Platform))
        {
            errorMessage = "Please fill in all fields (User, Platform, and a valid Amount).";
            return;
        }

        using var context = DbFactory.CreateDbContext();
        if (newTrans.Type == "Withdrawal")
        {
            var currentBalance = await GetUserBalance(newTrans.UserId, context);
            if (currentBalance < newTrans.AmountNOK)
            {
                errorMessage = $"Cannot add withdrawal. Amount ({newTrans.AmountNOK:N0}) exceeds user balance ({currentBalance:N0}).";
                return;
            }
        }

        var selectedUser = allUsers.FirstOrDefault(u => u.Id == newTrans.UserId);
        newTrans.UserName = selectedUser?.UserName ?? "Unknown";
        newTrans.Date = DateTime.UtcNow;
        newTrans.UpdatedAt = DateTime.UtcNow;
        newTrans.Status = "Completed"; 

        context.Transactions.Add(newTrans);
        context.AuditLogs.Add(new AuditLog { AdminUserName = currentAdminName ?? "Unknown", Action = $"Added {newTrans.Type}", TargetUserName = newTrans.UserName, Details = $"Amount: {newTrans.AmountNOK}, Platform: {newTrans.Platform}" });
        await context.SaveChangesAsync();
        
        await HubContext.Clients.Group(newTrans.UserId).SendAsync("ReceiveUpdate", $"New transaction: {newTrans.Type}");
        
        // --- Notify Other Admins ---
        await HubContext.Clients.Group("Admins").SendAsync("ReceiveAdminNotification", "Update");
        if (selectedUser != null && !string.IsNullOrEmpty(selectedUser.DiscordUserId))
        {
            if (newTrans.Type == "Withdrawal")
            {
                await DiscordService.NotifyUserWithdrawalAsync(selectedUser.DiscordUserId, newTrans, "Completed");
            }
        }
        
        successMessage = "Transaction added successfully!";
        var type = newTrans.Type;
        newTrans = new Transaction { Type = type, Date = DateTime.UtcNow, Status = "Completed" };
        selectedUserBalance = null; selectedUserAvail = null;
        await LoadTransactions(context);
    }
    
    private async Task<decimal> GetUserBalance(string userId, ApplicationDbContext context)
    {
        // FIX: Re-write logic to balance = D - W - (All Valid Stakes) + (Won Payouts)
        var user = await context.Users.AsNoTracking().FirstOrDefaultAsync(u => u.Id == userId);
        var totalDeposits = await context.Transactions.Where(t => t.UserId == userId && t.Type == "Deposit" && t.Status != "Rejected").SumAsync(t => t.AmountNOK);
        var totalWithdrawals = await context.Transactions.Where(t => t.UserId == userId && t.Type == "Withdrawal" && t.Status != "Rejected").SumAsync(t => t.AmountNOK);
        
        // 1. All Valid Stakes (Pending + Approved + Won + Lost). Exclude Rejected, Cancelled, Void
        var totalValidStakes = await context.Bets
            .Where(b => b.UserId == userId && 
                        b.Status != "Rejected" && 
                        b.Status != "Cancelled" && 
                        b.Status != "Void")
            .SumAsync(b => (decimal)(b.AmountNOK ?? 0));

        // 2. Won Payouts (Only for Won bets)
        var winningBets = await context.Bets
            .Where(b => b.UserId == userId && b.Status == "Won")
            .Select(b => new { b.AmountNOK, b.Odds })
            .ToListAsync();
        
        var totalWonPayouts = winningBets.Sum(b => Math.Floor((decimal)(b.AmountNOK ?? 0) * b.Odds));

        return totalDeposits - totalWithdrawals - totalValidStakes + totalWonPayouts;
    }

    public async ValueTask DisposeAsync()
    {
        if (hubConnection is not null) { await hubConnection.DisposeAsync(); }
    }
}