@page "/admin/transactions"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.SignalR
@using Microsoft.AspNetCore.SignalR.Client
@using BettingApp.Hubs
@using BettingApp.Data
@using Microsoft.EntityFrameworkCore
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject IHubContext<BetHub> HubContext
@inject IJSRuntime JSRuntime
@attribute [Authorize]
@rendermode InteractiveServer

<h3>Manage Transactions</h3>

@* --- PERSISTENT NOTIFICATION AREA --- *@
@if (successMessage != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        <i class="bi bi-bell-fill me-2"></i> @successMessage
        <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
    </div>
}

<div class="row">
    <div class="col-md-12 mb-4">
        <div class="card">
             <div class="card-header bg-primary text-white">Add Transaction</div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label>Select User</label>
                        <select class="form-select" @bind="newTrans.UserId">
                            <option value="">-- Select User --</option>
                            @foreach (var user in allUsers)
                            {
                                <option value="@user.Id">@user.UserName</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-2 mb-3">
                        <label>Type</label>
                        <select class="form-select" @bind="newTrans.Type">
                            <option value="Deposit">Deposit</option>
                            <option value="Withdrawal">Withdrawal</option>
                        </select>
                    </div>

                    <div class="col-md-3 mb-3">
                        <label>Platform</label>
                        <input type="text" class="form-control" placeholder="e.g. Bank, Vipps" @bind="newTrans.Platform" />
                    </div>

                    <div class="col-md-2 mb-3">
                        <label>Amount (NOK)</label>
                        <input type="number" class="form-control" @bind="newTrans.AmountNOK" />
                    </div>

                    <div class="col-md-2 mb-3 d-flex align-items-end">
                        <button class="btn btn-primary w-100" @onclick="AddTransaction">Add</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<h4 class="mb-3">Transaction History</h4>
<div class="table-responsive">
    <table class="table table-striped table-hover text-nowrap">
        <thead class="table-dark">
            <tr>
                <th>Date</th>
                <th>User</th>
                <th>Type</th>
                <th>Platform</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in allTransactions)
            {
                <tr>
                    <td>@ToUserLocal(t.Date).ToString("g")</td>
                    <td>@t.UserName</td>
                    <td>
                        <span class="badge @(t.Type == "Deposit" ? "bg-success" : "bg-warning")">
                            @t.Type
                        </span>
                    </td>
                    <td>@t.Platform</td>
                    <td>@t.AmountNOK.ToString("N0") kr</td>
                </tr>
            }
            @if (allTransactions.Count == 0)
            {
                <tr><td colspan="5" class="text-muted text-center">No transactions found.</td></tr>
            }
        </tbody>
    </table>
</div>

@code {
    private List<ApplicationUser> allUsers = new();
    private List<Transaction> allTransactions = new();
    private Transaction newTrans = new() { Type = "Deposit", Date = DateTime.UtcNow };
    
    private string? successMessage;
    private string? currentAdminName;

    // Timezone Logic
    private int TimezoneOffset { get; set; }
    private DateTime ToUserLocal(DateTime utcDate) => utcDate.AddMinutes(-TimezoneOffset);

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        currentAdminName = user.Identity?.Name;

        using var context = DbFactory.CreateDbContext();
        var userName = user.Identity?.Name;
        ApplicationUser? dbUser = null;
        if (!string.IsNullOrEmpty(userName))
        {
            dbUser = await context.Users.FirstOrDefaultAsync(u => u.UserName == userName);
        }

        if (dbUser == null || !dbUser.IsAdmin)
        {
            Nav.NavigateTo("/");
            return;
        }

        allUsers = await context.Users.ToListAsync();
        await LoadTransactions(context);
    }
    
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try {
                TimezoneOffset = await JSRuntime.InvokeAsync<int>("getBrowserTimeZoneOffset");
                StateHasChanged();
            } catch { }
        }
    }

    private async Task LoadTransactions(ApplicationDbContext context)
    {
        allTransactions = await context.Transactions
            .OrderByDescending(t => t.Date)
            .AsNoTracking()
            .ToListAsync();
    }

    private async Task AddTransaction()
    {
        if (string.IsNullOrEmpty(newTrans.UserId) || newTrans.AmountNOK <= 0 || string.IsNullOrEmpty(newTrans.Platform))
        {
            return;
        }

        using var context = DbFactory.CreateDbContext();
        var selectedUser = allUsers.FirstOrDefault(u => u.Id == newTrans.UserId);
        newTrans.UserName = selectedUser?.UserName ?? "Unknown";
        newTrans.Date = DateTime.UtcNow;

        context.Transactions.Add(newTrans);
        context.AuditLogs.Add(new AuditLog
        {
            AdminUserName = currentAdminName ?? "Unknown",
            Action = $"Added {newTrans.Type}",
            TargetUserName = newTrans.UserName,
            Details = $"Amount: {newTrans.AmountNOK}, Platform: {newTrans.Platform}"
        });
        await context.SaveChangesAsync();
        
        await HubContext.Clients.Group(newTrans.UserId).SendAsync("ReceiveUpdate", "New transaction added");
        
        successMessage = "Transaction added successfully!";
        var type = newTrans.Type;
        newTrans = new Transaction { Type = type, Date = DateTime.UtcNow };
        await LoadTransactions(context);
        StateHasChanged();
    }
}