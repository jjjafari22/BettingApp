@page "/admin/auditlogs"
@using BettingApp.Data
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject AuthenticationStateProvider AuthStateProvider
@inject IJSRuntime JS
@rendermode InteractiveServer

<h3>Audit Logs</h3>

@if (!isAdmin)
{
    <div class="alert alert-danger">You are not authorized to view this page.</div>
}
else
{
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Filter by Affected User</label>
                    <input type="text" class="form-control" 
                           @bind="targetFilter" 
                           @onkeyup="HandleKeyUp"
                           placeholder="Search user (Press Enter)..." />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Filter by Admin</label>
                    <input type="text" class="form-control" 
                           @bind="adminFilter" 
                           @onkeyup="HandleKeyUp"
                           placeholder="Search admin (Press Enter)..." />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Start Date</label>
                    <input type="date" class="form-control" @bind="startDate" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">End Date</label>
                    <input type="date" class="form-control" @bind="endDate" />
                </div>
                <div class="col-md-2 d-flex align-items-end gap-2">
                    <button class="btn btn-primary flex-grow-1" @onclick="SearchLogs">Search</button>
                    <button class="btn btn-outline-secondary" @onclick="ClearFilters" title="Clear Filters">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Time (Local)</th>
                    <th>Admin</th>
                    <th>Action</th>
                    <th>Target User</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in logs)
                {
                    <tr>
                        <td>@log.Timestamp.AddMinutes(-TimezoneOffset).ToString("g")</td>
                        <td><span class="badge bg-secondary">@log.AdminUserName</span></td>
                        <td><span class="fw-bold">@log.Action</span></td>
                        <td>@log.TargetUserName</td>
                        <td class="text-muted small">@log.Details</td>
                    </tr>
                }
                @if (logs.Count == 0)
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted">No logs found matching criteria.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @* Pagination Controls *@
    <div class="d-flex justify-content-between align-items-center mt-2">
        <button class="btn btn-outline-secondary btn-sm" @onclick="PrevPage" disabled="@(currentPage <= 1)">
            <i class="bi bi-arrow-left"></i> Previous
        </button>
        <span class="text-muted">Page @currentPage of @totalPages (Total: @totalLogs)</span>
        <button class="btn btn-outline-secondary btn-sm" @onclick="NextPage" disabled="@(!hasNextPage)">
            Next <i class="bi bi-arrow-right"></i>
        </button>
    </div>
}

@code {
    private List<AuditLog> logs = new();
    // Filters
    private string targetFilter = "";
    private string adminFilter = "";
    private DateTime? startDate;
    private DateTime? endDate;
    
    // Pagination State
    private int currentPage = 1;
    private const int pageSize = 20;
    private int totalLogs = 0;
    private bool isAdmin = false;
    private int totalPages => totalLogs == 0 ? 1 : (int)Math.Ceiling((double)totalLogs / pageSize);
    private bool hasNextPage => currentPage < totalPages;

    // Timezone Logic
    private int TimezoneOffset { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        using var context = DbFactory.CreateDbContext();
        if (user.Identity?.IsAuthenticated == true)
        {
            var dbUser = await context.Users.AsNoTracking().FirstOrDefaultAsync(u => u.UserName == user.Identity.Name);
            isAdmin = dbUser?.IsAdmin ?? false;
        }

        if (isAdmin)
        {
            await LoadLogs();
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && isAdmin)
        {
            try
            {
                TimezoneOffset = await JS.InvokeAsync<int>("getBrowserTimeZoneOffset");
                // Reload logs if dates were involved, or just refresh UI
                StateHasChanged();
            }
            catch { }
        }
    }

    private async Task HandleKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SearchLogs();
        }
    }

    private async Task ClearFilters()
    {
        targetFilter = "";
        adminFilter = "";
        startDate = null;
        endDate = null;
        await SearchLogs();
    }

    private async Task SearchLogs()
    {
        currentPage = 1;
        await LoadLogs();
    }

    private async Task LoadLogs()
    {
        using var context = DbFactory.CreateDbContext();
        var query = context.AuditLogs.AsNoTracking();

        if (!string.IsNullOrWhiteSpace(targetFilter))
        {
            var term = targetFilter.Trim().ToLower();
            query = query.Where(l => l.TargetUserName.ToLower().Contains(term));
        }

        if (!string.IsNullOrWhiteSpace(adminFilter))
        {
            var term = adminFilter.Trim().ToLower();
            query = query.Where(l => l.AdminUserName.ToLower().Contains(term));
        }

        if (startDate.HasValue)
        {
            // Convert user's 00:00 local to UTC
            var startLocal = startDate.Value.Date;
            var startUtc = startLocal.AddMinutes(TimezoneOffset);
            query = query.Where(l => l.Timestamp >= startUtc);
        }

        if (endDate.HasValue)
        {
            var endLocal = endDate.Value.Date.AddDays(1);
            var endUtc = endLocal.AddMinutes(TimezoneOffset);
            query = query.Where(l => l.Timestamp < endUtc);
        }

        totalLogs = await query.CountAsync();
        logs = await query
            .OrderByDescending(l => l.Timestamp)
            .Skip((currentPage - 1) * pageSize)
            .Take(pageSize)
            .ToListAsync();
    }

    private async Task NextPage()
    {
        if (hasNextPage)
        {
            currentPage++;
            await LoadLogs();
        }
    }

    private async Task PrevPage()
    {
        if (currentPage > 1)
        {
            currentPage--;
            await LoadLogs();
        }
    }
}