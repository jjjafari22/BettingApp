@page "/admin"
@using Microsoft.AspNetCore.Authorization  
@using Microsoft.AspNetCore.SignalR
@using BettingApp.Hubs
@using BettingApp.Data
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.SignalR.Client
@using Microsoft.AspNetCore.Components.Authorization
@using BettingApp.Services
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav
@inject IDbContextFactory<ApplicationDbContext> DbFactory 
@inject IHubContext<BetHub> HubContext
@inject DiscordNotificationService DiscordService
@attribute [Authorize]
@rendermode InteractiveServer
@implements IAsyncDisposable

<h3>Admin Dashboard</h3>

@if (successMessage != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        <i class="bi bi-bell-fill me-2"></i> @successMessage
        <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
    </div>
}
@if (errorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @errorMessage
        <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
    </div>
}

@* --- Edit Bet Modal --- *@
@if (editingBetModel != null)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Bet #@editingBetModel.Id</h5>
                    <button type="button" class="btn-close" @onclick="CancelEdit"></button>
                </div>
                <div class="modal-body">
                    
                    @if (editErrorMessage != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show shadow-sm mb-3" role="alert">
                            <i class="bi bi-exclamation-circle-fill me-2"></i> @editErrorMessage
                            <button type="button" class="btn-close" @onclick="() => editErrorMessage = null"></button>
                        </div>
                    }

                    <div class="mb-3">
                        <label class="form-label">User</label>
                        <input type="text" class="form-control" value="@editingBetModel.UserName" disabled />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Bet Amount (NOK)</label>
                        <input type="number" class="form-control" @bind="editingBetModel.AmountNOK" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Odds</label>
                        <input type="number" step="0.01" class="form-control" @bind="editingBetModel.Odds" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Status</label>
                        <select class="form-select" @bind="editingBetModel.Status">
                            <option value="Pending">Pending</option>
                            <option value="Approved">Approved</option>
                            <option value="Rejected">Rejected</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Outcome</label>
                        <select class="form-select" @bind="editingBetModel.Outcome">
                            <option value="">(None - Active)</option>
                            <option value="Won">Won</option>
                            <option value="Lost">Lost</option>
                            <option value="Void">Void</option>
                        </select>
                        <small class="text-muted">Set to "None" if the bet is still active.</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelEdit">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveEdit">Save Changes</button>
                </div>
            </div>
        </div>
    </div>
}

<div class="row">
    @* Bets Section *@
    <div class="col-md-12">
        @* 1. Pending Bets Queue *@
        <h4 class="mb-3">Pending Bets Queue</h4>
        <div class="table-responsive">
            <table class="table table-striped mb-5 text-nowrap align-middle">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>User</th>
                        <th style="width: 140px;">Bet Amount</th>
                        <th style="min-width: 70px;">Odds</th>
                        <th>Potential Payout</th>
                        <th>Screenshot</th> 
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var bet in pendingBets)
                    {
                        <tr>
                            <td>@bet.CreatedAt.ToLocalTime().ToString("g")</td>
                            <td>@bet.UserName</td>
                            <td>
                                <input type="number" class="form-control form-control-sm" @bind="bet.AmountNOK" placeholder="Amount" />
                            </td>
                            <td>
                                <input type="number" step="0.01" class="form-control form-control-sm" @bind="bet.Odds" placeholder="Odds" />
                            </td>
                            <td>@bet.PotentialPayout.ToString("N0")</td>
                            <td>
                                @if(!string.IsNullOrEmpty(bet.ScreenshotUrl))
                                {
                                    <a href="@bet.ScreenshotUrl" target="_blank">View</a>
                                }
                            </td>
                            <td>
                                <button class="btn btn-success btn-sm" @onclick='() => ProcessBet(bet, "Approved")'>Approve</button>
                                <button class="btn btn-danger btn-sm" @onclick='() => ProcessBet(bet, "Rejected")'>Reject</button>
                            </td>
                        </tr>
                    }
                    @if (pendingBets.Count == 0)
                    {
                        <tr><td colspan="7" class="text-muted">No pending bets.</td></tr>
                    }
                </tbody>
            </table>
        </div>

        @* 2. Active (Approved) Bets Table *@
        <h4 class="mb-3">Active Bets (Awaiting Outcome)</h4>
        <div class="table-responsive mb-5">
            <table class="table table-bordered border-primary text-nowrap">
                <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <th>User</th>
                        <th>Bet Amount</th>
                        <th>Odds</th>
                        <th>Potential Payout</th>
                        <th>Screenshot</th>
                        <th>Set Outcome</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var bet in approvedBets)
                    {
                        <tr>
                            <td>@bet.CreatedAt.ToLocalTime().ToString("g")</td>
                            <td>@bet.UserName</td>
                            <td>@bet.AmountNOK</td>
                            <td>@bet.Odds</td>
                            <td>@bet.PotentialPayout.ToString("N0")</td>
                            <td>
                                @if(!string.IsNullOrEmpty(bet.ScreenshotUrl))
                                {
                                    <a href="@bet.ScreenshotUrl" target="_blank">View</a>
                                }
                            </td>
                            <td>
                                <button class="btn btn-success btn-sm" @onclick='() => SetOutcome(bet, "Won")'>Won</button>
                                <button class="btn btn-danger btn-sm" @onclick='() => SetOutcome(bet, "Lost")'>Lost</button>
                                <button class="btn btn-secondary btn-sm" @onclick='() => SetOutcome(bet, "Void")'>Void</button>
                            </td>
                            <td>
                                <button class="btn btn-outline-primary btn-sm" @onclick="() => StartEdit(bet)">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                            </td>
                        </tr>
                    }
                    @if (approvedBets.Count == 0)
                    {
                        <tr><td colspan="8" class="text-muted">No active bets.</td></tr>
                    }
                </tbody>
            </table>
        </div>

        @* 3. Completed Bets History Table *@
        <h4 class="mb-3">Completed Bets History (@totalCompletedBets)</h4>
        
        <div class="table-responsive">
            <table class="table table-secondary table-hover text-nowrap">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>User</th>
                        <th>Bet Amount</th>
                        <th>Odds</th>
                        <th>Outcome</th>
                        <th>Payout</th>
                        <th>Screenshot</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var bet in completedBets)
                    {
                        var rowClass = bet.Outcome == "Won" ? "table-success" : (bet.Outcome == "Lost" ? "table-danger" : "");
                        <tr class="@rowClass">
                            <td>@bet.CreatedAt.ToLocalTime().ToString("g")</td>
                            <td>@bet.UserName</td>
                            <td>@bet.AmountNOK</td>
                            <td>@bet.Odds</td>
                            <td><strong>@bet.Outcome</strong></td>
                            <td>
                                @if(bet.Outcome == "Won")
                                {
                                    @bet.PotentialPayout.ToString("N0")
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if(!string.IsNullOrEmpty(bet.ScreenshotUrl))
                                {
                                    <a href="@bet.ScreenshotUrl" target="_blank">View</a>
                                }
                            </td>
                            <td>
                                <button class="btn btn-outline-dark btn-sm" @onclick="() => StartEdit(bet)">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                            </td>
                        </tr>
                    }
                    @if (completedBets.Count == 0)
                    {
                        <tr><td colspan="8" class="text-muted">No completed bets found.</td></tr>
                    }
                </tbody>
            </table>
            
            <div class="d-flex justify-content-between align-items-center mt-2">
                <button class="btn btn-outline-secondary btn-sm" @onclick="PrevPage" disabled="@(completedPage <= 1)">
                    <i class="bi bi-arrow-left"></i> Previous
                </button>
                <span class="text-muted">Page @completedPage</span>
                <button class="btn btn-outline-secondary btn-sm" @onclick="NextPage" disabled="@(!hasMoreCompletedBets)">
                    Next <i class="bi bi-arrow-right"></i>
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    private List<Bet> pendingBets = new();
    private List<Bet> approvedBets = new();
    private List<Bet> completedBets = new();
    private int completedPage = 1;
    private const int pageSize = 20;
    private bool hasMoreCompletedBets = false;
    private int totalCompletedBets = 0;

    private string? successMessage;
    private string? errorMessage;
    private HubConnection? hubConnection;
    private string? currentAdminName;
    
    private Bet? editingBetModel;
    private string? editErrorMessage;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        currentAdminName = user.Identity?.Name;

        using var context = DbFactory.CreateDbContext();
        var currentUserName = user.Identity?.Name;
        var dbUser = currentUserName != null 
            ? await context.Users.FirstOrDefaultAsync(u => u.UserName == currentUserName)
            : null;

        if (dbUser == null || !dbUser.IsAdmin)
        {
            Nav.NavigateTo("/");
            return;
        }

        await LoadPendingBets();
        await LoadApprovedBets();
        await LoadCompletedBets();
    }
    
    private async Task LoadPendingBets()
    {
        using var context = DbFactory.CreateDbContext();
        pendingBets = await context.Bets
            .Where(b => b.Status == "Pending")
            .OrderByDescending(b => b.CreatedAt)
            .ToListAsync();
    }
    
    private async Task LoadApprovedBets()
    {
        using var context = DbFactory.CreateDbContext();
        approvedBets = await context.Bets
            .Where(b => b.Status == "Approved" && string.IsNullOrEmpty(b.Outcome))
            .OrderByDescending(b => b.CreatedAt)
            .ToListAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            hubConnection = new HubConnectionBuilder()
                .WithUrl(Nav.ToAbsoluteUri("/bethub"))
                .Build();
            
            hubConnection.On<string>("ReceiveAdminNotification", async (message) =>
            {
                await LoadPendingBets();
                successMessage = message;
                await InvokeAsync(StateHasChanged);
            });

            await hubConnection.StartAsync();
            await hubConnection.InvokeAsync("JoinAdminGroup");
        }
    }

    public async ValueTask DisposeAsync()
    {
        if (hubConnection is not null)
        {
            await hubConnection.DisposeAsync();
        }
    }
    
    private async Task LoadCompletedBets()
    {
        using var context = DbFactory.CreateDbContext();
        totalCompletedBets = await context.Bets.CountAsync(b => !string.IsNullOrEmpty(b.Outcome));
        completedBets = await context.Bets
            .Where(b => !string.IsNullOrEmpty(b.Outcome))
            .OrderByDescending(b => b.Id) 
            .Skip((completedPage - 1) * pageSize)
            .Take(pageSize)
            .ToListAsync();
        hasMoreCompletedBets = totalCompletedBets > (completedPage * pageSize);
    }

    private async Task NextPage()
    {
        completedPage++;
        await LoadCompletedBets();
    }

    private async Task PrevPage()
    {
        if (completedPage > 1)
        {
            completedPage--;
            await LoadCompletedBets();
        }
    }

    // --- REFACTORED: Validating Helper Method ---
    private async Task<(bool allowed, string error)> CheckUserBalance(string userId, decimal newBetAmount)
    {
        using var context = DbFactory.CreateDbContext();
        var targetUser = await context.Users.AsNoTracking().FirstOrDefaultAsync(u => u.Id == userId);
        var creditLimit = targetUser?.CreditLimit ?? 0m;

        var userTrans = await context.Transactions.Where(t => t.UserId == userId).AsNoTracking().ToListAsync();
        var userBets = await context.Bets.Where(b => b.UserId == userId).AsNoTracking().ToListAsync();
        
        var totalDeposits = userTrans.Where(t => t.Type == "Deposit").Sum(t => t.AmountNOK);
        var totalWithdrawals = userTrans.Where(t => t.Type == "Withdrawal").Sum(t => t.AmountNOK);
        var winnings = userBets.Where(b => b.Outcome == "Won").Sum(b => b.PotentialPayout);
        
        // Calculate liability based on active bets
        var liability = userBets
            .Where(b => b.Status == "Pending" || (b.Status == "Approved" && b.Outcome != "Void"))
            .Sum(b => (decimal)(b.AmountNOK ?? 0));

        var currentBalance = totalDeposits - totalWithdrawals - liability + winnings;
        var availableCredit = currentBalance + creditLimit;
        
        // Logic: The "liability" calculated above includes ALL active bets from DB.
        // We need to verify if adding/modifying THIS bet stays within limits. 
        // Note: For an *existing* bet being edited, the "liability" sum ALREADY includes its OLD amount.
        // This rough check below approximates the safety check.
        // A stricter check would exclude the specific bet ID from the sum and add the new amount.
        
        // Let's do the strict check:
        liability = userBets
            .Where(b => b.Id != editingBetModel?.Id // Exclude current editing bet to re-add new amount
                        && (b.Status == "Pending" || (b.Status == "Approved" && b.Outcome != "Void")))
            .Sum(b => (decimal)(b.AmountNOK ?? 0));
        
        var projectedBalance = totalDeposits - totalWithdrawals - liability - newBetAmount + winnings;
        var projectedAvailable = projectedBalance + creditLimit;

        if (projectedAvailable < 0)
        {
            return (false, $"Insufficient funds. Available: {availableCredit:N0} kr. Required for this bet: {newBetAmount:N0} kr.");
        }
        return (true, string.Empty);
    }
    // --------------------------------------------

    private void StartEdit(Bet bet)
    {
        editingBetModel = new Bet
        {
            Id = bet.Id,
            UserId = bet.UserId,
            UserName = bet.UserName,
            AmountNOK = bet.AmountNOK,
            Odds = bet.Odds,
            Status = bet.Status,
            Outcome = bet.Outcome,
            ScreenshotUrl = bet.ScreenshotUrl,
            CreatedAt = bet.CreatedAt
        };
        editErrorMessage = null;
        errorMessage = null;
    }

    private void CancelEdit()
    {
        editingBetModel = null;
        editErrorMessage = null;
    }

    private async Task SaveEdit()
    {
        if (editingBetModel == null) return;
        editErrorMessage = null;

        // 1. Basic Validation
        if (editingBetModel.AmountNOK <= 0)
        {
            editErrorMessage = "Bet amount must be greater than 0.";
            return;
        }
        if (editingBetModel.Odds <= 1)
        {
            editErrorMessage = "Odds must be greater than 1.00.";
            return;
        }
        if (Math.Round(editingBetModel.Odds, 2) != editingBetModel.Odds)
        {
            editErrorMessage = "Odds cannot have more than 2 decimal places.";
            return;
        }

        // 2. System Settings Validation
        using var settingsContext = DbFactory.CreateDbContext();
        var settings = await settingsContext.Settings.FirstOrDefaultAsync();
        if (settings != null)
        {
            if (editingBetModel.Odds > settings.MaxOdds)
            {
                editErrorMessage = $"Odds ({editingBetModel.Odds}) exceed max limit of {settings.MaxOdds}.";
                return;
            }
            decimal potentialPayout = Math.Floor((decimal)(editingBetModel.AmountNOK ?? 0) * editingBetModel.Odds);
            if (potentialPayout > settings.MaxPayout)
            {
                editErrorMessage = $"Payout ({potentialPayout:N0}) exceeds max limit of {settings.MaxPayout:N0}.";
                return;
            }
        }

        // 3. User Balance Validation (CRITICAL FIX)
        // Only check balance if the bet is Active/Approved/Pending (i.e., not Cancelled/Rejected)
        if (editingBetModel.Status == "Approved" || editingBetModel.Status == "Pending")
        {
            var (allowed, error) = await CheckUserBalance(editingBetModel.UserId, (decimal)editingBetModel.AmountNOK!);
            if (!allowed)
            {
                editErrorMessage = error;
                return;
            }
        }

        // 4. Save to DB
        using var context = DbFactory.CreateDbContext();
        var dbBet = await context.Bets.FindAsync(editingBetModel.Id);
        var dbUser = await context.Users.FindAsync(editingBetModel.UserId); // Fetch for Discord

        if (dbBet != null)
        {
            // Detect Changes for Notifications
            bool outcomeChanged = dbBet.Outcome != editingBetModel.Outcome;
            bool statusChanged = dbBet.Status != editingBetModel.Status;
            
            dbBet.AmountNOK = editingBetModel.AmountNOK;
            dbBet.Odds = editingBetModel.Odds;
            dbBet.Status = editingBetModel.Status;
            dbBet.Outcome = string.IsNullOrEmpty(editingBetModel.Outcome) ? null : editingBetModel.Outcome;

            context.AuditLogs.Add(new AuditLog
            {
                AdminUserName = currentAdminName ?? "Unknown",
                Action = "Edit Bet",
                TargetUserName = editingBetModel.UserName,
                Details = $"Edited Bet ID: {dbBet.Id}. New Amount: {dbBet.AmountNOK}, Odds: {dbBet.Odds}, Status: {dbBet.Status}, Outcome: {dbBet.Outcome ?? "None"}"
            });

            await context.SaveChangesAsync();
            
            // 5. Notifications (CRITICAL FIX)
            // Send SignalR update to user so their dashboard refreshes
            await HubContext.Clients.Group(dbBet.UserId).SendAsync("ReceiveUpdate", $"Your bet (ID: {dbBet.Id}) was updated.");
            
            // Send Discord Notifications based on changes
            if (dbUser != null && !string.IsNullOrEmpty(dbUser.DiscordUserId))
            {
                if (statusChanged && dbBet.Status == "Approved")
                {
                     _ = DiscordService.SendDmAsync(dbUser.DiscordUserId, $"‚úÖ **Bet Approved (Updated)**\nYour bet #{dbBet.Id} is active.");
                }
                else if (statusChanged && dbBet.Status == "Rejected")
                {
                     _ = DiscordService.SendDmAsync(dbUser.DiscordUserId, $"‚ùå **Bet Rejected (Updated)**\nYour bet #{dbBet.Id} was rejected.");
                }
                
                if (outcomeChanged && !string.IsNullOrEmpty(dbBet.Outcome))
                {
                    string msg = dbBet.Outcome == "Won" 
                        ? $"üéâ **WINNER!**\nYour bet (ID: {dbBet.Id}) WON!\nPayout: {dbBet.PotentialPayout:N0} NOK" 
                        : $"üìâ **Bet Result**\nYour bet (ID: {dbBet.Id}) outcome: {dbBet.Outcome}.";
                    _ = DiscordService.SendDmAsync(dbUser.DiscordUserId, msg);
                }
            }

            successMessage = $"Bet #{dbBet.Id} updated successfully.";
        }
        else
        {
            editErrorMessage = "Bet not found in database.";
            return;
        }

        editingBetModel = null;
        
        await LoadPendingBets();
        await LoadApprovedBets();
        await LoadCompletedBets();
        
        StateHasChanged();
    }

    private async Task ProcessBet(Bet bet, string status)
    {
        errorMessage = null;
        if (status == "Approved")
        {
            // Re-use logic for consistency
            if (bet.AmountNOK == null || bet.AmountNOK <= 0) { errorMessage = "Invalid amount"; return; }
            if (bet.Odds <= 1) { errorMessage = "Invalid odds"; return; }
            if (Math.Round(bet.Odds, 2) != bet.Odds) { errorMessage = "Odds max 2 decimals"; return; }

            // Balance Check
            var (allowed, error) = await CheckUserBalance(bet.UserId, (decimal)bet.AmountNOK);
            if (!allowed)
            {
                errorMessage = error;
                StateHasChanged();
                return;
            }
        }
        
        // ... (Existing ProcessBet Logic remains largely the same, but safe to paste full block below) ...
        using var context = DbFactory.CreateDbContext();
        var dbBet = await context.Bets.FindAsync(bet.Id);
        var dbUser = await context.Users.FindAsync(bet.UserId);
        
        if (dbBet != null)
        {
            dbBet.Status = status;
            dbBet.AmountNOK = bet.AmountNOK;
            dbBet.Odds = bet.Odds; 

            context.AuditLogs.Add(new AuditLog
            {
                AdminUserName = currentAdminName ?? "Unknown",
                Action = $"Bet {status}",
                TargetUserName = bet.UserName,
                Details = $"Bet ID: {bet.Id}, Amount: {bet.AmountNOK}, Odds: {bet.Odds}"
            });
            await context.SaveChangesAsync();
        }

        await LoadPendingBets();
        
        string fullScreenshotUrl = string.IsNullOrEmpty(bet.ScreenshotUrl) 
            ? "" 
            : (bet.ScreenshotUrl.StartsWith("http") ? bet.ScreenshotUrl : $"{Nav.BaseUri.TrimEnd('/')}{bet.ScreenshotUrl}");
        
        string messageDetails = $"\nUser: {bet.UserName}\nAmount: {bet.AmountNOK} NOK\nOdds: {bet.Odds}\nPotential Payout: {bet.PotentialPayout:N0} NOK\n" +
        (string.IsNullOrEmpty(fullScreenshotUrl) ? "" : $"[View Screenshot]({fullScreenshotUrl})");
        
        if (status == "Approved")
        {
            await LoadApprovedBets();
            if (dbUser != null && !string.IsNullOrEmpty(dbUser.DiscordUserId))
            {
                _ = DiscordService.SendDmAsync(dbUser.DiscordUserId, $"‚úÖ **Bet Approved!**{messageDetails}");
            }
        }
        else if (status == "Rejected" && dbUser != null && !string.IsNullOrEmpty(dbUser.DiscordUserId))
        {
             _ = DiscordService.SendDmAsync(dbUser.DiscordUserId, $"‚ùå **Bet Rejected**{messageDetails}");
        }

        await HubContext.Clients.Group(bet.UserId).SendAsync("ReceiveUpdate", $"Your bet was {status}");
        successMessage = $"Bet for {bet.UserName} was {status}.";
        StateHasChanged();
    }

    private async Task SetOutcome(Bet bet, string outcome)
    {
        using var context = DbFactory.CreateDbContext();
        var dbBet = await context.Bets.FindAsync(bet.Id);
        var dbUser = await context.Users.FindAsync(bet.UserId);
        
        if (dbBet != null)
        {
            dbBet.Outcome = outcome;
            context.AuditLogs.Add(new AuditLog
            {
                AdminUserName = currentAdminName ?? "Unknown",
                Action = "Set Bet Outcome",
                TargetUserName = bet.UserName,
                Details = $"Bet ID: {bet.Id}, Outcome: {outcome}, Payout: {dbBet.PotentialPayout:N0}"
            });
            await context.SaveChangesAsync();
        }

        await LoadApprovedBets();
        await LoadCompletedBets();

        await HubContext.Clients.Group(bet.UserId).SendAsync("ReceiveUpdate", $"Your bet outcome is: {outcome}");
        
        if (dbUser != null && !string.IsNullOrEmpty(dbUser.DiscordUserId))
        {
            string msg = outcome == "Won" 
                ? $"üéâ **WINNER!**\nYour bet (ID: {bet.Id}) WON!\nPayout: {bet.PotentialPayout:N0} NOK" 
                : $"üìâ **Bet Result**\nYour bet (ID: {bet.Id}) outcome: {outcome}.";
            _ = DiscordService.SendDmAsync(dbUser.DiscordUserId, msg);
        }

        successMessage = $"Bet for {bet.UserName} marked as {outcome}.";
        StateHasChanged();
    }
}