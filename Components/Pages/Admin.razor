@page "/admin"
@using Microsoft.AspNetCore.Authorization  
@using Microsoft.AspNetCore.SignalR
@using BettingApp.Hubs
@using BettingApp.Data
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.SignalR.Client
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav
@inject IDbContextFactory<ApplicationDbContext> DbFactory 
@inject IHubContext<BetHub> HubContext
@attribute [Authorize]
@rendermode InteractiveServer
@implements IAsyncDisposable

<h3>Admin Dashboard</h3>

<div style="position: fixed; top: 20px; right: 20px; z-index: 1000;">
    @if (successMessage != null)
    {
        <div class="alert alert-success shadow-lg border-success">
            <i class="bi bi-bell-fill me-2"></i> @successMessage
        </div>
    }
    @if (errorMessage != null)
    {
        <div class="alert alert-danger shadow-lg border-danger">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @errorMessage
        </div>
    }
</div>

<div class="row">
    @* Bets Section - Now Full Width *@
    <div class="col-md-12">
        @* 1. Pending Bets Queue *@
        <h4 class="mb-3">Pending Bets Queue</h4>
        <div class="table-responsive">
            <table class="table table-striped mb-5 text-nowrap align-middle">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>User</th>
                        <th style="width: 150px;">Bet Amount</th>
                        <th style="width: 120px;">Odds</th>
                        <th>Potential Payout</th>
                        <th>Screenshot</th> 
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var bet in pendingBets)
                    {
                        <tr>
                            <td>@bet.CreatedAt.ToLocalTime().ToString("g")</td>
                            <td>@bet.UserName</td>
                            <td>
                                <input type="number" class="form-control" @bind="bet.AmountNOK" placeholder="Amount" />
                            </td>
                            <td>
                                <input type="number" step="0.01" class="form-control" @bind="bet.Odds" placeholder="Odds" />
                            </td>
                            <td>@bet.PotentialPayout.ToString("N0")</td>
                            <td>
                                @if(!string.IsNullOrEmpty(bet.ScreenshotUrl))
                                {
                                    <a href="@bet.ScreenshotUrl" target="_blank">View</a>
                                }
                            </td>
                            <td>
                                <button class="btn btn-success btn-sm" @onclick='() => ProcessBet(bet, "Approved")'>Approve</button>
                                <button class="btn btn-danger btn-sm" @onclick='() => ProcessBet(bet, "Rejected")'>Reject</button>
                            </td>
                        </tr>
                    }
                    @if (pendingBets.Count == 0)
                    {
                        <tr><td colspan="7" class="text-muted">No pending bets.</td></tr>
                    }
                </tbody>
            </table>
        </div>

        @* 2. Active (Approved) Bets Table *@
        <h4 class="mb-3">Active Bets (Awaiting Outcome)</h4>
        <div class="table-responsive">
            <table class="table table-bordered border-primary text-nowrap">
                <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <th>User</th>
                        <th>Bet Amount</th>
                        <th>Odds</th>
                        <th>Potential Payout</th>
                        <th>Screenshot</th>
                        <th>Set Outcome</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var bet in approvedBets)
                    {
                        <tr>
                            <td>@bet.CreatedAt.ToLocalTime().ToString("g")</td>
                            <td>@bet.UserName</td>
                            <td>@bet.AmountNOK</td>
                            <td>@bet.Odds</td>
                            <td>@bet.PotentialPayout.ToString("N0")</td>
                            <td>
                                @if(!string.IsNullOrEmpty(bet.ScreenshotUrl))
                                {
                                    <a href="@bet.ScreenshotUrl" target="_blank">View</a>
                                }
                            </td>
                            <td>
                                <button class="btn btn-success btn-sm" @onclick='() => SetOutcome(bet, "Won")'>Won</button>
                                <button class="btn btn-danger btn-sm" @onclick='() => SetOutcome(bet, "Lost")'>Lost</button>
                                <button class="btn btn-secondary btn-sm" @onclick='() => SetOutcome(bet, "Void")'>Void</button>
                            </td>
                        </tr>
                    }
                    @if (approvedBets.Count == 0)
                    {
                        <tr><td colspan="7" class="text-muted">No active bets.</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {
    private List<Bet> pendingBets = new();
    private List<Bet> approvedBets = new();
    private string? successMessage;
    private string? errorMessage;
    private HubConnection? hubConnection;

    protected override async Task OnInitializedAsync()
    {
        // 1. GET CURRENT USER STATE
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        // 2. CHECK IF ADMIN
        using var context = DbFactory.CreateDbContext();
        var currentUserName = user.Identity?.Name;
        var dbUser = currentUserName != null 
            ? await context.Users.FirstOrDefaultAsync(u => u.UserName == currentUserName)
            : null;

        if (dbUser == null || !dbUser.IsAdmin)
        {
            Nav.NavigateTo("/");
            return;
        }

        // 3. IF ADMIN, PROCEED WITH LOADING DATA
        pendingBets = await context.Bets
            .Where(b => b.Status == "Pending")
            .OrderByDescending(b => b.CreatedAt)
            .ToListAsync();

        approvedBets = await context.Bets
            .Where(b => b.Status == "Approved" && string.IsNullOrEmpty(b.Outcome))
            .OrderByDescending(b => b.CreatedAt)
            .ToListAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            hubConnection = new HubConnectionBuilder()
                .WithUrl(Nav.ToAbsoluteUri("/bethub"))
                .Build();

            hubConnection.On<string>("ReceiveAdminNotification", async (message) =>
            {
                using var context = DbFactory.CreateDbContext();
                
                pendingBets = await context.Bets
                    .Where(b => b.Status == "Pending")
                    .OrderByDescending(b => b.CreatedAt)
                    .ToListAsync();

                successMessage = message;
                await InvokeAsync(StateHasChanged);
                await Task.Delay(5000);
                successMessage = null;
                await InvokeAsync(StateHasChanged);
            });

            await hubConnection.StartAsync();
            await hubConnection.InvokeAsync("JoinAdminGroup");
        }
    }

    public async ValueTask DisposeAsync()
    {
        if (hubConnection is not null)
        {
            await hubConnection.DisposeAsync();
        }
    }

    private async Task ProcessBet(Bet bet, string status)
    {
        errorMessage = null;
        // Clear any previous errors

        // VALIDATION: If Approving, enforce Amount, Odds, AND Global Limits
        if (status == "Approved")
        {
            if (bet.AmountNOK == null || bet.AmountNOK <= 0)
            {
                errorMessage = "Bet Amount is required and must be greater than 0 to approve.";
                StateHasChanged(); // Ensure UI updates to show error
                return;
            }

            if (bet.Odds <= 1)
            {
                errorMessage = "Odds must be greater than 1.00 to approve.";
                StateHasChanged();
                return;
            }

            // --- FIX START: Check against Admin Settings ---
            using var settingsContext = DbFactory.CreateDbContext();
            var settings = await settingsContext.Settings.FirstOrDefaultAsync();

            if (settings != null)
            {
                if (bet.Odds > settings.MaxOdds)
                {
                    errorMessage = $"The odds ({bet.Odds}) exceed the maximum allowed limit of {settings.MaxOdds}.";
                    StateHasChanged();
                    return;
                }

                if (bet.PotentialPayout > settings.MaxPayout)
                {
                    errorMessage = $"The potential payout ({bet.PotentialPayout:N0}) exceeds the maximum allowed limit of {settings.MaxPayout:N0}.";
                    StateHasChanged();
                    return;
                }
            }
            // --- FIX END ---
        }

        using var context = DbFactory.CreateDbContext();
        var dbBet = await context.Bets.FindAsync(bet.Id);
        
        if (dbBet != null)
        {
            dbBet.Status = status;
            // IMPORTANT: Save the values from the editable fields
            dbBet.AmountNOK = bet.AmountNOK;
            dbBet.Odds = bet.Odds;

            await context.SaveChangesAsync();
        }

        pendingBets.Remove(bet);
        if (status == "Approved")
        {
            bet.Status = status;
            approvedBets.Insert(0, bet);
        }

        await HubContext.Clients.Group(bet.UserId).SendAsync("ReceiveUpdate", $"Your bet was {status}");
    }

    private async Task SetOutcome(Bet bet, string outcome)
    {
        using var context = DbFactory.CreateDbContext();
        var dbBet = await context.Bets.FindAsync(bet.Id);
        
        if (dbBet != null)
        {
            dbBet.Outcome = outcome;
            await context.SaveChangesAsync();
        }

        approvedBets.Remove(bet);
        await HubContext.Clients.Group(bet.UserId).SendAsync("ReceiveUpdate", $"Your bet outcome is: {outcome}");
    }
}