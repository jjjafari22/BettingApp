@page "/admin"
@using Microsoft.AspNetCore.Authorization  
@using Microsoft.AspNetCore.SignalR
@using BettingApp.Hubs
@using BettingApp.Data
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.SignalR.Client
@inject NavigationManager Nav
@inject IDbContextFactory<ApplicationDbContext> DbFactory  /* CHANGE 1: Inject Factory */
@inject IHubContext<BetHub> HubContext
@attribute [Authorize]
@rendermode InteractiveServer
@implements IAsyncDisposable

<h3>Admin Dashboard</h3>

<div style="position: fixed; top: 20px; right: 20px; z-index: 1000;">
    @if (successMessage != null)
    {
        <div class="alert alert-success shadow-lg border-success">
            <i class="bi bi-bell-fill me-2"></i> @successMessage
        </div>
    }
</div>

<div class="row">
    @* Queue Section *@
    <div class="col-md-8">
        
        @* 1. Pending Bets Queue *@
        <h4 class="mb-3">Pending Bets Queue</h4>
        <table class="table table-striped mb-5">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>User</th>
                    <th>Bet Amount</th>
                    <th>Odds</th>
                    <th>Potential Payout</th>
                    <th>Screenshot</th> 
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bet in pendingBets)
                {
                    <tr>
                        <td>@bet.CreatedAt.ToLocalTime().ToString("g")</td>
                        <td>@bet.UserName</td>
                        <td>@bet.AmountNOK</td>
                        <td>@bet.Odds</td>
                        <td>@bet.PotentialPayout.ToString("N0")</td>
                        <td>
                            @if(!string.IsNullOrEmpty(bet.ScreenshotUrl))
                            {
                                <a href="@bet.ScreenshotUrl" target="_blank">View</a>
                            }
                        </td>
                        <td>
                            <button class="btn btn-success btn-sm" @onclick='() => ProcessBet(bet, "Approved")'>Approve</button>
                            <button class="btn btn-danger btn-sm" @onclick='() => ProcessBet(bet, "Rejected")'>Reject</button>
                        </td>
                    </tr>
                }
                @if (pendingBets.Count == 0)
                {
                    <tr><td colspan="7" class="text-muted">No pending bets.</td></tr>
                }
            </tbody>
        </table>

        @* 2. Active (Approved) Bets Table *@
        <h4 class="mb-3">Active Bets (Awaiting Outcome)</h4>
        <table class="table table-bordered border-primary">
            <thead class="table-light">
                <tr>
                    <th>Date</th>
                    <th>User</th>
                    <th>Bet Amount</th>
                    <th>Odds</th>
                    <th>Potential Payout</th>
                    <th>Screenshot</th>
                    <th>Set Outcome</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bet in approvedBets)
                {
                    <tr>
                        <td>@bet.CreatedAt.ToLocalTime().ToString("g")</td>
                        <td>@bet.UserName</td>
                        <td>@bet.AmountNOK</td>
                        <td>@bet.Odds</td>
                        <td>@bet.PotentialPayout.ToString("N0")</td>
                        <td>
                            @if(!string.IsNullOrEmpty(bet.ScreenshotUrl))
                            {
                                <a href="@bet.ScreenshotUrl" target="_blank">View</a>
                            }
                        </td>
                        <td>
                            <button class="btn btn-success btn-sm" @onclick='() => SetOutcome(bet, "Won")'>Won</button>
                            <button class="btn btn-danger btn-sm" @onclick='() => SetOutcome(bet, "Lost")'>Lost</button>
                            <button class="btn btn-secondary btn-sm" @onclick='() => SetOutcome(bet, "Void")'>Void</button>
                        </td>
                    </tr>
                }
                @if (approvedBets.Count == 0)
                {
                    <tr><td colspan="7" class="text-muted">No active bets.</td></tr>
                }
            </tbody>
        </table>

    </div>

    @* Add Transaction Panel *@
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-primary text-white">Add Transaction</div>
            <div class="card-body">
                @if (successMessage != null)
                {
                    <div class="alert alert-success">@successMessage</div>
                }
                
                <div class="mb-3">
                    <label>Select User</label>
                    <select class="form-select" @bind="newTrans.UserId">
                        <option value="">-- Select User --</option>
                        @foreach (var user in allUsers)
                        {
                            <option value="@user.Id">@user.UserName</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label>Type</label>
                    <select class="form-select" @bind="newTrans.Type">
                        <option value="Deposit">Deposit</option>
                        <option value="Withdrawal">Withdrawal</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label>Platform</label>
                    <input type="text" class="form-control" placeholder="e.g. Bank, Vipps" @bind="newTrans.Platform" />
                </div>

                <div class="mb-3">
                    <label>Amount (NOK)</label>
                    <input type="number" class="form-control" @bind="newTrans.AmountNOK" />
                </div>

                <button class="btn btn-primary w-100" @onclick="AddTransaction">Add Transaction</button>
            </div>
        </div>
    </div>
</div>

@code {
    private List<Bet> pendingBets = new();
    private List<Bet> approvedBets = new();
    private List<ApplicationUser> allUsers = new();
    private Transaction newTrans = new() { Type = "Deposit", Date = DateTime.UtcNow };
    private string? successMessage;
    private HubConnection? hubConnection;

    protected override async Task OnInitializedAsync()
    {
        // Load initial data using a short-lived context
        using var context = DbFactory.CreateDbContext();
        
        pendingBets = await context.Bets
            .Where(b => b.Status == "Pending")
            .OrderByDescending(b => b.CreatedAt)
            .ToListAsync();

        approvedBets = await context.Bets
            .Where(b => b.Status == "Approved" && string.IsNullOrEmpty(b.Outcome))
            .OrderByDescending(b => b.CreatedAt)
            .ToListAsync();

        allUsers = await context.Users.ToListAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            hubConnection = new HubConnectionBuilder()
                .WithUrl(Nav.ToAbsoluteUri("/bethub"))
                .Build();

            hubConnection.On<string>("ReceiveAdminNotification", async (message) =>
            {
                Console.WriteLine($"NOTIFICATION RECEIVED: {message}"); // Check Browser Console (F12)

                using var context = DbFactory.CreateDbContext();
                
                pendingBets = await context.Bets
                    .Where(b => b.Status == "Pending")
                    .OrderByDescending(b => b.CreatedAt)
                    .ToListAsync();

                successMessage = message;
                await InvokeAsync(StateHasChanged);

                // Play a sound (Optional, requires JS interop)
                // await JSRuntime.InvokeVoidAsync("playNotificationSound");

                await Task.Delay(5000);
                successMessage = null;
                await InvokeAsync(StateHasChanged);
            });

            await hubConnection.StartAsync();
            await hubConnection.InvokeAsync("JoinAdminGroup");
        }
    }

    public async ValueTask DisposeAsync()
    {
        if (hubConnection is not null)
        {
            await hubConnection.DisposeAsync();
        }
    }

    private async Task ProcessBet(Bet bet, string status)
    {
        // Use a fresh context for the operation
        using var context = DbFactory.CreateDbContext();
        
        // Re-fetch or attach the entity to modify it
        var dbBet = await context.Bets.FindAsync(bet.Id);
        if (dbBet != null)
        {
            dbBet.Status = status;
            await context.SaveChangesAsync();
        }

        // Update UI list manually for instant feedback
        pendingBets.Remove(bet); // Remove from UI list
        if (status == "Approved")
        {
            // Update the object properties locally so it displays correctly if moved
            bet.Status = status; 
            approvedBets.Insert(0, bet);
        }

        await HubContext.Clients.User(bet.UserId).SendAsync("ReceiveUpdate", $"Your bet was {status}");
    }

    private async Task SetOutcome(Bet bet, string outcome)
    {
        using var context = DbFactory.CreateDbContext();
        var dbBet = await context.Bets.FindAsync(bet.Id);
        
        if (dbBet != null)
        {
            dbBet.Outcome = outcome;
            await context.SaveChangesAsync();
        }

        approvedBets.Remove(bet);

        await HubContext.Clients.User(bet.UserId).SendAsync("ReceiveUpdate", $"Your bet outcome is: {outcome}");
    }

    private async Task AddTransaction()
    {
        if (string.IsNullOrEmpty(newTrans.UserId) || newTrans.AmountNOK <= 0 || string.IsNullOrEmpty(newTrans.Platform))
        {
            return;
        }

        using var context = DbFactory.CreateDbContext();
        
        var selectedUser = allUsers.FirstOrDefault(u => u.Id == newTrans.UserId);
        newTrans.UserName = selectedUser?.UserName ?? "Unknown";
        newTrans.Date = DateTime.UtcNow;

        context.Transactions.Add(newTrans);
        await context.SaveChangesAsync();
        
        await HubContext.Clients.User(newTrans.UserId).SendAsync("ReceiveUpdate", "New transaction added");
        
        successMessage = "Transaction added successfully!";
        var type = newTrans.Type;
        newTrans = new Transaction { Type = type, Date = DateTime.UtcNow };
        
        await Task.Delay(3000);
        successMessage = null;
        StateHasChanged();
    }
}