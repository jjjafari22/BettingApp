    private async Task SaveEdit()
    {
        if (editingBetModel == null) return;
        editErrorMessage = null;

        if (editingBetModel.AmountNOK <= 0) { editErrorMessage = "Bet amount must be greater than 0."; return; }
        if (editingBetModel.Odds <= 1) { editErrorMessage = "Odds must be greater than 1.00."; return; }
        if (Math.Round(editingBetModel.Odds, 2) != editingBetModel.Odds) { editErrorMessage = "Odds cannot have more than 2 decimal places."; return; }

        using var settingsContext = DbFactory.CreateDbContext();
        var settings = await settingsContext.Settings.FirstOrDefaultAsync();
        if (settings != null)
        {
            // NEW: Check against Min Bet Amount
            if (editingBetModel.AmountNOK < settings.MinBetAmount) 
            { 
                editErrorMessage = $"Bet amount ({editingBetModel.AmountNOK}) is below the minimum limit of {settings.MinBetAmount:N0} kr.";
                return; 
            }

            decimal potentialPayout = Math.Floor((decimal)(editingBetModel.AmountNOK ?? 0) * editingBetModel.Odds);
            if (potentialPayout > settings.MaxPayout) { editErrorMessage = $"Payout ({potentialPayout:N0}) exceeds max limit of {settings.MaxPayout:N0}."; return; }
        }

        if (editingBetModel.Status == "Approved" || editingBetModel.Status == "Pending")
        {
            var (allowed, error) = await CheckUserBalance(editingBetModel.UserId, (decimal)editingBetModel.AmountNOK!);
            if (!allowed) { editErrorMessage = error; return; }
        }

        using var context = DbFactory.CreateDbContext();
        var dbBet = await context.Bets.FindAsync(editingBetModel.Id);
        var dbUser = await context.Users.FindAsync(editingBetModel.UserId);
        if (dbBet != null)
        {
            bool outcomeChanged = dbBet.Outcome != editingBetModel.Outcome;
            bool statusChanged = dbBet.Status != editingBetModel.Status;
            
            dbBet.AmountNOK = editingBetModel.AmountNOK;
            dbBet.Odds = editingBetModel.Odds;
            dbBet.Status = editingBetModel.Status;
            dbBet.Outcome = string.IsNullOrEmpty(editingBetModel.Outcome) ? null : editingBetModel.Outcome;

            context.AuditLogs.Add(new AuditLog
            {
                AdminUserName = currentAdminName ?? "Unknown",
                Action = "Edit Bet",
                TargetUserName = editingBetModel.UserName,
                Details = $"Edited Bet ID: {dbBet.Id}. Amount: {dbBet.AmountNOK}, Odds: {dbBet.Odds}, Status: {dbBet.Status}, Outcome: {dbBet.Outcome ?? "None"}"
            });

            await context.SaveChangesAsync();
            await HubContext.Clients.Group(dbBet.UserId).SendAsync("ReceiveUpdate", $"Your bet (ID: {dbBet.Id}) was updated.");

            if (dbUser != null && !string.IsNullOrEmpty(dbUser.DiscordUserId))
            {
                // Simplified Logic using centralized service
                if (statusChanged && (dbBet.Status == "Approved" || dbBet.Status == "Rejected"))
                {
                     _ = DiscordService.NotifyUserBetAsync(dbUser.DiscordUserId, dbBet, dbBet.Status, isUpdate: true);
                }
                
                if (outcomeChanged && !string.IsNullOrEmpty(dbBet.Outcome))
                {
                    _ = DiscordService.NotifyUserBetAsync(dbUser.DiscordUserId, dbBet, dbBet.Outcome, isUpdate: true);
                }
            }
            successMessage = $"Bet #{dbBet.Id} updated successfully.";
        }
        else
        {
            editErrorMessage = "Bet not found in database.";
            return;
        }

        editingBetModel = null;
        await LoadPendingBets();
        await LoadApprovedBets();
        await LoadCompletedBets();
        StateHasChanged();
    }

    private async Task ProcessBet(Bet bet, string status)
    {
        errorMessage = null;
        reviewErrorMessage = null;

        if (status == "Approved")
        {
            if (bet.AmountNOK == null || bet.AmountNOK <= 0) 
            { 
                reviewErrorMessage = "Invalid amount";
                return; 
            }
            if (bet.Odds <= 1) 
            { 
                reviewErrorMessage = "Invalid odds";
                return; 
            }
            if (Math.Round(bet.Odds, 2) != bet.Odds) 
            { 
                reviewErrorMessage = "Odds max 2 decimals";
                return; 
            }

            // ADDED: Min Bet Amount Check
            using var settingsContext = DbFactory.CreateDbContext();
            var settings = await settingsContext.Settings.FirstOrDefaultAsync();
            if (settings != null && (decimal)(bet.AmountNOK ?? 0) < settings.MinBetAmount)
            {
                reviewErrorMessage = $"Bet amount ({bet.AmountNOK}) is below the minimum limit of {settings.MinBetAmount:N0} kr.";
                StateHasChanged();
                return;
            }

            // FIXED: Added ! to (decimal)bet.AmountNOK! to fix CS8629
            var (allowed, error) = await CheckUserBalance(bet.UserId, (decimal)bet.AmountNOK!);
            if (!allowed)
            {
                reviewErrorMessage = error;
                StateHasChanged();
                return;
            }
        }
        
        using var context = DbFactory.CreateDbContext();
        var dbBet = await context.Bets.FindAsync(bet.Id);
        var dbUser = await context.Users.FindAsync(bet.UserId);
        if (dbBet != null)
        {
            dbBet.Status = status;
            dbBet.AmountNOK = bet.AmountNOK;
            dbBet.Odds = bet.Odds; 

            context.AuditLogs.Add(new AuditLog
            {
                AdminUserName = currentAdminName ?? "Unknown",
                Action = $"Bet {status}",
                TargetUserName = bet.UserName,
                Details = $"Bet ID: {bet.Id}, Amount: {bet.AmountNOK}, Odds: {bet.Odds}"
            });
            await context.SaveChangesAsync();
        }

        await LoadPendingBets();
        
        reviewingBetModel = null;
        reviewErrorMessage = null;
        if (status == "Approved")
        {
            await LoadApprovedBets();
        }

        if (dbUser != null && !string.IsNullOrEmpty(dbUser.DiscordUserId))
        {
            // Single call for Approved/Rejected
            _ = DiscordService.NotifyUserBetAsync(dbUser.DiscordUserId, dbBet!, status, isUpdate: false);
        }

        await HubContext.Clients.Group(bet.UserId).SendAsync("ReceiveUpdate", $"Your bet was {status}");
        successMessage = $"Bet for {bet.UserName} was {status}.";
        StateHasChanged();
    }
    
