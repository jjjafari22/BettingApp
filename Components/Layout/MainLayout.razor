@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Identity
@using BettingApp.Data
@using Microsoft.AspNetCore.Components.Authorization

@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IServiceScopeFactory ScopeFactory 

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-2 px-md-4">
            
        </div>

        <article class="content px-2 px-md-4">
            @if (showDiscordWarning)
            {
                <div class="alert alert-warning">
                    To place bets, you must first join our Discord server. 
                    <a href="https://discord.gg/rNnsQWENMs" target="_blank" class="alert-link">Get started here</a>. 
                    We require a verified channel to communicate with all active users.
                </div>
            }
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private bool showDiscordWarning = false;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var userPrincipal = authState.User;

        if (userPrincipal.Identity is not null && userPrincipal.Identity.IsAuthenticated)
        {
            // Create a new scope to get a fresh UserManager/DbContext
            // This prevents conflict with the page's DbContext usage
            using (var scope = ScopeFactory.CreateScope())
            {
                var userManager = scope.ServiceProvider.GetRequiredService<UserManager<ApplicationUser>>();
                var user = await userManager.GetUserAsync(userPrincipal);
                
                // CHANGED: Now checks if 'DiscordUsername' is missing (instead of Client ID)
                if (user is not null && string.IsNullOrEmpty(user.DiscordUsername))
                {
                    showDiscordWarning = true;
                }
            }
        }
    }
}