@page "/Account/Manage"

@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Identity
@using BettingApp.Data

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@inject IdentityUserAccessor UserAccessor
@inject IdentityRedirectManager RedirectManager

<PageTitle>Profile</PageTitle>

<h3>Profile</h3>
<StatusMessage />

<div class="row">
    <div class="col-xl-6">
        <EditForm Model="Input" FormName="profile" OnValidSubmit="OnValidSubmitAsync" method="post">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert" />
            
            <div class="form-floating mb-3">
                <input type="text" value="@username" id="username" class="form-control" placeholder="Choose your username." disabled />
                <label for="username" class="form-label">Username</label>
            </div>
            
            <div class="form-floating mb-3">
                <InputText @bind-Value="Input.DiscordUserId" id="Input.DiscordUserId" class="form-control" placeholder="Discord User ID" />
                <label for="Input.DiscordUserId" class="form-label">Discord User ID</label>
                <div class="form-text text-muted">You must share a server with the bot or have DMs open to receive notifications.</div>
                <ValidationMessage For="() => Input.DiscordUserId" class="text-danger" />
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </EditForm>

        <div class="mt-4 pt-3 border-top">
            <h5>How to connect Discord</h5>
            <ol class="ps-3 text-muted small">
                <li class="mb-2">
                    <strong>Join the Server:</strong> 
                    <a href="https://discord.gg/nXTXdpXw7r" target="_blank" class="text-decoration-none">Click here to join our Discord</a>.
                </li>
                <li class="mb-2">
                    <strong>Enable Developer Mode:</strong> 
                    You need this to get notification on Approved Bets and if you Won or Lost the bet.
                    Go to <a href="https://discord.com/settings/advanced" target="_blank" class="text-decoration-none">Advanced Settings</a> and toggle "Developer Mode" on.
                </li>
                <li class="mb-2">
                    <strong>Find your User ID:</strong> 
                    Go to <a href="https://discord.com/settings/account" target="_blank" class="text-decoration-none">My Account</a>.
                    <ul class="mt-1">
                        <li class="mb-3">
                            <strong>Desktop:</strong> Click the three dots <span class="badge bg-secondary">...</span> next to your profile button and select "Copy User ID".
                            
                            <div class="mt-2">
                                <a href="images/CopyUserIDDiscord.png" target="_blank" title="Click to view full size">
                                    <img src="images/CopyUserIDDiscord.png" 
                                         class="img-fluid border rounded shadow-sm" 
                                         alt="How to copy Discord User ID" 
                                         style="max-width: 100%; height: auto; cursor: pointer;" />
                                </a>
                                <div class="small text-muted fst-italic mt-1">Click the image to enlarge</div>
                            </div>
                        </li>
                        <li><strong>Mobile:</strong> Tap the three dots <span class="badge bg-secondary">...</span> in the top-right menu to find the option.</li>
                    </ul>
                </li>
                <li class="mb-2">
                    <strong>Save:</strong> 
                    Paste the Discord User ID into the box above and click <strong>Save</strong>.
                </li>
            </ol>
        </div>
    </div>
</div>

@code {
    private ApplicationUser user = default!;
    private string? username;

    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    [SupplyParameterFromForm]
    private InputModel Input { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        user = await UserAccessor.GetRequiredUserAsync(HttpContext);
        username = await UserManager.GetUserNameAsync(user);

        // Load existing ID
        Input.DiscordUserId ??= user.DiscordUserId;
    }

    private async Task OnValidSubmitAsync()
    {
        bool hasChanges = false;

        // --- Save Discord ID ---
        if (Input.DiscordUserId != user.DiscordUserId)
        {
            user.DiscordUserId = Input.DiscordUserId;
            await UserManager.UpdateAsync(user);
            hasChanges = true;
        }
        // -----------------------

        if (hasChanges)
        {
            await SignInManager.RefreshSignInAsync(user);
            RedirectManager.RedirectToCurrentPageWithStatus("Your profile has been updated", HttpContext);
        }
        else
        {
             RedirectManager.RedirectToCurrentPageWithStatus("No changes were made", HttpContext);
        }
    }

    private sealed class InputModel
    {
        [Display(Name = "Discord User ID")]
        public string? DiscordUserId { get; set; }
    }
}