@page "/Account/RegisterConfirmation"

<PageTitle>Registration Pending</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">Registration Pending</h4>
                </div>
                <div class="card-body">
                    <p class="card-text lead">
                        Your account has been successfully created!
                    </p>
                    <p>
                        However, an administrator must <strong>approve</strong> your account before you can log in.
                    </p>
                    <hr />
                    <p class="mb-0">
                        Please wait for approval. You will be notified when your account is active.
                    </p>
                    <div class="mt-4">
                         <a href="/" class="btn btn-secondary">Return Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery]
    private string? Email { get; set; }

    [SupplyParameterFromQuery]
    private string? ReturnUrl { get; set; }
}